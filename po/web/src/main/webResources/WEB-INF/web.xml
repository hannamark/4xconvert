<?xml version="1.0" encoding="UTF-8"?>

<web-app id="PO" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>PO</display-name>

    
    <!--  This Servlet used in lieu of a LiquiBase Update because of difficulty in 
            using custom task with BDA -->
    <listener>
        <listener-class>gov.nih.nci.po.web.util.PO1129UpdaterListener</listener-class>
    </listener>
    
    <!-- This servlet handles the syncing of GridGrouper groups to CSM.  -->
    <listener>
        <listener-class>gov.nih.nci.coppa.web.CSMSyncListener</listener-class>
    </listener>

    <!-- Define the basename for a resource bundle for I18N -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>ApplicationResources</param-value>
    </context-param>
    <context-param>
        <param-name>showErrorStackTraces</param-name>
        <param-value>${showErrorStackTraces}</param-value>
    </context-param>
    <context-param>
        <param-name>defaultPageSize</param-name>
        <param-value>${defaultPageSize}</param-value>
    </context-param>
    <context-param>
        <param-name>appTagVersion</param-name>
        <param-value>${project.version}</param-value>
    </context-param>
    <context-param>
        <param-name>appTagRevision</param-name>
        <param-value>${buildNumber}</param-value>
    </context-param>
    
    <!-- Filters -->
    <filter>
        <filter-name>usernameFilter</filter-name>
        <filter-class>com.fiveamsolutions.nci.commons.web.filter.UsernameFilter</filter-class>
    </filter>
    <filter>
        <filter-name>openSessionFilter</filter-name>
        <filter-class>gov.nih.nci.po.web.session.PoOpenSessionInViewFilter</filter-class>
    </filter>
    <filter>
        <filter-name>struts2-cleanup</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ActionContextCleanUp</filter-class>
    </filter>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
    </filter>
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter>
        <filter-name>sessionFixation</filter-name>
        <filter-class>com.fiveamsolutions.nci.commons.web.filter.SessionFixationProtectionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>csmUserFilter</filter-name>
        <filter-class>gov.nih.nci.po.web.filter.CsmUserFilter</filter-class>
    </filter>
    
     <filter-mapping>
        <filter-name>sessionFixation</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>usernameFilter</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>openSessionFilter</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>    
    <filter-mapping>
        <filter-name>struts2-cleanup</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/struts/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>csmUserFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    
    <!-- Welcome file lists -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/index.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/403.jsp</location>
    </error-page>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>protected</web-resource-name>
            <url-pattern>/protected/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>Curator</role-name>
        </auth-constraint>
    </security-constraint>

    <login-config>
        <auth-method>${web.auth.method}</auth-method>
        <form-login-config>
            <form-login-page>/login.jsp</form-login-page>
            <form-error-page>/login/loginFailed.action</form-error-page>
        </form-login-config>
    </login-config>

    <security-role>
        <description>Curators organize and oversee data quality in PO.</description>
        <role-name>Curator</role-name>
    </security-role>
</web-app>
