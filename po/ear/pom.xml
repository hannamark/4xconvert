<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>gov.nih.nci.coppa.po</groupId>
        <artifactId>po</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>

    <artifactId>po-ear</artifactId>
    <packaging>ear</packaging>
    <name>po-ear</name>
    <url>../../ear/target/site</url>
    
    <properties>
        <log.level.default>WARN</log.level.default>
        <log.smtp.host>smtp.example.com</log.smtp.host>
        <log.smtp.from>changeme@example.com</log.smtp.from>
        <log.smtp.to>changeme@example.com</log.smtp.to>
        <jboss.home>target/jbossDeploy</jboss.home>
        <jboss.mq.service.POInvocationLayer.type.UIL2.ServerBindPort>8094</jboss.mq.service.POInvocationLayer.type.UIL2.ServerBindPort>
        <jbdc.type.mapping>PostgreSQL 8.0</jbdc.type.mapping>
    </properties>

    <dependencies>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.8</version>
            <scope>provided</scope>
        </dependency>
        
        <dependency>
            <groupId>${pom.parent.groupId}</groupId>
            <artifactId>po-web</artifactId>
            <version>${pom.parent.version}</version>
            <type>war</type>
        </dependency>
        
        <dependency>
            <groupId>${pom.parent.groupId}</groupId>
            <artifactId>po-services</artifactId>
            <version>${pom.parent.version}</version>
            <type>ejb</type>
        </dependency>
        
        <dependency>
            <groupId>gov.nih.nci</groupId>
            <artifactId>security</artifactId>
            <version>4.0.1</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    <build>
        <finalName>po</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <configuration>
                    <finalName>po</finalName>
                    <resourcesDir>target/classes</resourcesDir>
                    <modules>
                        <jarModule>
                            <groupId>commons-beanutils</groupId>
                            <artifactId>commons-beanutils</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-beanutils</groupId>
                            <artifactId>commons-beanutils-bean-collections</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-beanutils</groupId>
                            <artifactId>commons-beanutils-core</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-collections</groupId>
                            <artifactId>commons-collections</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-configuration</groupId>
                            <artifactId>commons-configuration</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-digester</groupId>
                            <artifactId>commons-digester</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-lang</groupId>
                            <artifactId>commons-lang</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>gov.nih.nci.coppa</groupId>
                            <artifactId>iso-datatypes</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>com.fiveamsolutions</groupId>
                            <artifactId>nci-commons-core</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>gov.nih.nci</groupId>
                            <artifactId>security</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                            <bundleFileName>security.jar</bundleFileName>
                        </jarModule>
                        <jarModule>
                            <groupId>net.sf.xsnapshot</groupId>
                            <artifactId>xsnapshot</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <groupId>gov.nih.nci.coppa</groupId>
                            <artifactId>ctep-services</artifactId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <artifactId>oc4jclient</artifactId>
                            <groupId>oracle.oc4j</groupId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <artifactId>dms</artifactId>
                            <groupId>oracle.dms</groupId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <artifactId>oc4j-internal</artifactId>
                            <groupId>oracle.oc4j-internal</groupId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <artifactId>adminclient</artifactId>
                            <groupId>oracle.oc4j</groupId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <artifactId>jazncore</artifactId>
                            <groupId>oracle.jazn</groupId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <artifactId>ojdbc14dms</artifactId>
                            <groupId>oracle.ojdbc14dms</groupId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <artifactId>pcl</artifactId>
                            <groupId>oracle.oc4j</groupId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>
                        <jarModule>
                            <artifactId>aqapi</artifactId>
                            <groupId>oracle.aqapi</groupId>
                            <includeInApplicationXml>true</includeInApplicationXml>
                        </jarModule>

                        
                        <ejbModule>
                            <groupId>${pom.parent.groupId}</groupId>
                            <artifactId>po-services</artifactId>
                        </ejbModule>
                        <webModule>
                            <groupId>${pom.parent.groupId}</groupId>
                            <artifactId>po-web</artifactId>
                            <contextRoot>/po-web</contextRoot>
                            <bundleFileName>po-web.war</bundleFileName>
                        </webModule>
                        
                        <jarModule>
                            <groupId>net.sf.ehcache</groupId>
                            <artifactId>ehcache</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                            <groupId>commons-logging</groupId>
                            <artifactId>commons-logging</artifactId>
                            <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>isorelax</groupId>
                           <artifactId>isorelax</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>dom4j</groupId>
                           <artifactId>dom4j</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>javax.servlet</groupId>
                           <artifactId>servlet-api</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>jaxen</groupId>
                           <artifactId>jaxen</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>msv</groupId>
                           <artifactId>msv</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>relaxngDatatype</groupId>
                           <artifactId>relaxngDatatype</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>saxpath</groupId>
                           <artifactId>saxpath</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>xerces</groupId>
                           <artifactId>xercesImpl</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                        <jarModule>
                           <groupId>xml-apis</groupId>
                           <artifactId>xml-apis</artifactId>
                           <excluded>true</excluded>
                        </jarModule>
                    </modules>
                    <security>
                        <security-role id="client">
                            <role-name>client</role-name>
                        </security-role>
                        <security-role id="Curator">
                            <role-name>Curator</role-name>
                        </security-role>
                    </security>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <filtering>true</filtering>
                <directory>src/main/resources</directory>
            </resource>
        </resources>
    </build>
</project>