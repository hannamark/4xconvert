<?xml version="1.0" encoding="UTF-8"?>
<datasources>

  <xa-datasource>
    <jndi-name>po-xa-ds</jndi-name>

    <xa-datasource-class>${jdbc.xa.driverClassName}</xa-datasource-class>
    <xa-datasource-property name="ServerName">${database.hostname}</xa-datasource-property>
    <xa-datasource-property name="PortNumber">${database.port}</xa-datasource-property>

    <xa-datasource-property name="DatabaseName">${database.name}</xa-datasource-property>
    <xa-datasource-property name="User">${jdbc.username}</xa-datasource-property>
    <xa-datasource-property name="Password">${jdbc.password}</xa-datasource-property>
    
    <new-connection-sql>select 1</new-connection-sql>
    <check-valid-connection-sql>select 1</check-valid-connection-sql>
    <min-pool-size>5</min-pool-size>
    <max-pool-size>20</max-pool-size>

    <isSameRM-override-value>false</isSameRM-override-value>
    <track-connection-by-tx>true</track-connection-by-tx>
    <type-mapping>${jbdc.type.mapping}</type-mapping>
    <no-tx-separate-pools/>
  </xa-datasource>
  
</datasources>
