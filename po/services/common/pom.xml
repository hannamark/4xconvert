<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>gov.nih.nci.coppa.po</groupId>
        <artifactId>po-services</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>po-services-common</artifactId>
    <packaging>jar</packaging>
    <name>po-services-common</name>
    <url>../../services/common/target/site</url>
    <properties>
        <hibernate.dialect>org.hibernate.dialect.PostgreSQLDialect</hibernate.dialect>
        <hibernate.version>3.2.5.ga</hibernate.version>
        <hibernate.annotations.version>3.3.0.ga</hibernate.annotations.version>
        <hibernate.commons.annotations.version>3.3.0.ga</hibernate.commons.annotations.version>
        <hibernate.validator.version>3.0.0.ga</hibernate.validator.version>
        <hibernate.search.version>3.0.0.GA</hibernate.search.version>
        <schema.file>schema.sql</schema.file>
        <test.jdbc.url>jdbc:hsqldb:mem:po-test</test.jdbc.url>
        <test.jdbc.username>sa</test.jdbc.username>
        <test.jdbc.password></test.jdbc.password>
        <test.jdbc.driverClassName>org.hsqldb.jdbcDriver</test.jdbc.driverClassName>
        <test.hibernate.dialect>org.hibernate.dialect.HSQLDialect</test.hibernate.dialect>
        <admin.db.username>postgres</admin.db.username>
        <admin.db.password>postgres</admin.db.password>
    </properties>
    <dependencies>
        <!-- JBoss Provided Libs -->
        <dependency>
            <groupId>javax.ejb</groupId>
            <artifactId>ejb-api</artifactId>
            <version>3.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.annotation</groupId>
            <artifactId>jsr250-api</artifactId>
            <version>1.0</version>
            <scope>provided</scope>
        </dependency>

        <!-- Jars required -->
        <dependency>
            <groupId>gov.nih.nci</groupId>
            <artifactId>security</artifactId>
            <version>4.0.1</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>com.fiveamsolutions</groupId>
            <artifactId>nci-commons-core</artifactId>
            <version>${nci-commons.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-lang</groupId>
            <artifactId>commons-lang</artifactId>
            <version>2.3</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.7.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>commons-collections</groupId>
            <artifactId>commons-collections</artifactId>
            <version>3.2.1</version>
            <scope>compile</scope>
        </dependency>
        <!--
            JBoss provieds log4j, but we package here as well. See:
            http://wiki.jboss.org/wiki/Wiki.jsp?page=ClassLoaderScopingProperties
        -->
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.13</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate</artifactId>
            <version>${hibernate.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <artifactId>jta</artifactId>
                    <groupId>javax.transaction</groupId>
                </exclusion>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-annotations</artifactId>
            <version>${hibernate.annotations.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-commons-annotations</artifactId>
            <version>${hibernate.commons.annotations.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-validator</artifactId>
            <version>${hibernate.validator.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-search</artifactId>
            <version>${hibernate.search.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>org.hibernate</groupId>
                    <artifactId>hibernate</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>net.sf.xsnapshot</groupId>
            <artifactId>xsnapshot</artifactId>
            <version>1.1-beta2</version>
            <scope>compile</scope>
        </dependency>

        <!-- Testing only jars -->
        <dependency>
            <groupId>hsqldb</groupId>
            <artifactId>hsqldb</artifactId>
            <version>1.8.0.7</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <artifactId>jta</artifactId>
            <groupId>javax.transaction</groupId>
            <version>1.0.1B</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>jboss</groupId>
            <artifactId>jboss-annotations-ejb3</artifactId>
            <version>RC9.Patch-1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>commons-configuration</groupId>
            <artifactId>commons-configuration</artifactId>
            <version>1.1</version>
            <scope>compile</scope>
        </dependency>
        
        <!-- Dependencies for the ant build script for xsnapshot generation -->
        <dependency>
            <groupId>ant</groupId>
            <artifactId>ant</artifactId>
            <version>1.6.3</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging-api</artifactId>
            <version>1.0.3</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-xjavadoc</artifactId>
            <version>1.5.snapshot050611</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet-xdoclet-module</artifactId>
            <version>1.2.3</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>xdoclet</groupId>
            <artifactId>xdoclet</artifactId>
            <version>1.2.3</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <groupId>net.sf.xsnapshot</groupId>
            <artifactId>xdoclet-xsnapshot-module</artifactId>
            <version>1.1-beta2</version>
            <optional>true</optional>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>hibernate3-maven-plugin</artifactId>
                <version>2.0</version>
                <executions>
                    <execution>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>hbm2ddl</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <components>
                        <component>
                            <name>hbm2ddl</name>
                            <implementation>annotationconfiguration</implementation>
                        </component>
                    </components>
                    <componentProperties>
                        <drop>true</drop>
                        <create>true</create>
                        <export>false</export>
                        <outputfilename>${schema.file}</outputfilename>
                        <console>false</console>
                        <jdk5>true</jdk5>
                        <configurationfile>${pom.basedir}/target/classes/hibernate.cfg.xml</configurationfile>
                    </componentProperties>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.hibernate</groupId>
                        <artifactId>hibernate</artifactId>
                        <version>${hibernate.version}</version>
                        <scope>provided</scope>
                        <exclusions>
                            <exclusion>
                                <artifactId>jta</artifactId>
                                <groupId>javax.transaction</groupId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                    <dependency>
                        <groupId>org.hibernate</groupId>
                        <artifactId>hibernate-annotations</artifactId>
                        <version>${hibernate.annotations.version}</version>
                        <scope>provided</scope>
                        <exclusions>
                            <exclusion>
                                <groupId>org.hibernate</groupId>
                                <artifactId>hibernate</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                    <dependency>
                        <groupId>org.hibernate</groupId>
                        <artifactId>hibernate-commons-annotations</artifactId>
                        <version>${hibernate.commons.annotations.version}</version>
                        <scope>provided</scope>
                        <exclusions>
                            <exclusion>
                                <groupId>org.hibernate</groupId>
                                <artifactId>hibernate</artifactId>
                            </exclusion>
                        </exclusions>
                    </dependency>
                    <dependency>
                        <groupId>${jdbc.groupId}</groupId>
                        <artifactId>${jdbc.artifactId}</artifactId>
                        <version>${jdbc.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
                                <property name="output.dir" value="target/generated-sources/xsnapshot/java" />
                                <path id="xsnapshot.classpath">
                                    <pathelement location="src/main/xsnapshotResources" />
                                    <fileset dir="${settings.localRepository}">
                                        <include name="ant/ant/1.6.3/ant-1.6.3.jar" />
                                        <include name="commons-collections/commons-collections/3.2.1/commons-collections-3.2.1.jar" />
                                        <include name="commons-lang/commons-lang/2.3/commons-lang-2.3.jar" />
                                        <include name="commons-logging/commons-logging-api/1.0.3/commons-logging-api-1.0.3.jar" />
                                        <include name="xdoclet/xdoclet-xjavadoc/1.5.snapshot050611/xdoclet-xjavadoc-1.5.snapshot050611.jar" />
                                        <include name="xdoclet/xdoclet/1.2.3/xdoclet-1.2.3.jar" />
                                        <include name="xdoclet/xdoclet-xdoclet-module/1.2.3/xdoclet-xdoclet-module-1.2.3.jar" />
                                        <include name="net/sf/xsnapshot/xdoclet-xsnapshot-module/1.1-beta2/xdoclet-xsnapshot-module-1.1-beta2.jar" />
                                        <include name="net/sf/xsnapshot/xsnapshot/1.1-beta2/xsnapshot-1.1-beta2.jar" />
                                    </fileset>
                                </path>
                                <taskdef name="xsnapshotdoclet" classname="net.sf.xsnapshot.ant.XSnapshotDocletTask" classpathref="xsnapshot.classpath" />
                                <mkdir dir="${output.dir}" />
                                <fileset dir="${project.build.sourceDirectory}" id="model">
                                    <include name="gov/nih/nci/po/data/common/*.java"/>
                                    <include name="gov/nih/nci/po/data/bo/*.java"/>
                                </fileset>
                                <xsnapshotdoclet destdir="${output.dir}" verbose="true" mergedir="${output.dir}">
                                    <fileset refid="model"/>
                                    <packageSubstitution packages="gov.nih.nci.po.data.bo" substituteWith="gov.nih.nci.po.data.dto" />
                                    <snapshot />
                                    <helper />
                                </xsnapshotdoclet>
                                <xsnapshotdoclet destdir="${project.build.outputDirectory}" verbose="true" mergedir="${output.dir}">
                                    <fileset refid="model"/>
                                    <packageSubstitution packages="gov.nih.nci.po.data.bo" substituteWith="gov.nih.nci.po.data.dto" />
                                    <properties />
                                </xsnapshotdoclet>
                            </tasks>
                            <sourceRoot>target/generated-sources/xsnapshot/java</sourceRoot>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
    </build>
    <profiles>
        <profile>
            <id>nuke-db</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <configuration>
                            <url>${database.url.prefix}template1</url>
                            <username>${admin.db.username}</username>
                            <password>${admin.db.password}</password>
                            <autocommit>true</autocommit>
                            <sqlCommand> 
                                drop database if exists ${database.name}; 
                                drop user if exists ${jdbc.username};
                                create database ${database.name}; 
                                create user ${jdbc.username} with password '${jdbc.password}'; 
                                grant all on database ${database.name} to ${jdbc.username}; 
                            </sqlCommand>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>init-db</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <configuration>
                            <onError>continue</onError>
                            <srcFiles>
                                <srcFile>src/main/sql/extraDropSchema.sql</srcFile>
                                <srcFile>src/main/sql/csmDropSchema.sql</srcFile>
                                <srcFile>target/hibernate3/sql/${schema.file}</srcFile>
                                <srcFile>src/main/sql/csmCreateSchema.sql</srcFile>
                                <srcFile>src/main/sql/countries.sql</srcFile>
                                <srcFile>src/main/sql/degreetypes.sql</srcFile>
                                <srcFile>src/main/sql/organizationtypes.sql</srcFile>
                                <srcFile>src/main/sql/persontypes.sql</srcFile>
                                <srcFile>src/main/sql/csmBootstrapData.sql</srcFile>
                                <srcFile>src/main/sql/extraCreateSchema.sql</srcFile>
                            </srcFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
