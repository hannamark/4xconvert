    <parent>
        <groupId>gov.nih.nci.po</groupId>
        <artifactId>services</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <artifactId>common</artifactId>
    <packaging>jar</packaging>
    <name>common</name>
    <url>../../common/target/site</url>


    <dependencies>
