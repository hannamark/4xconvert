                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <configuration>
                            <onError>continue</onError>
                            <srcFiles>
                                <srcFile>src/main/sql/extraDropSchema.sql</srcFile>
