                                <srcFile>target/hibernate3/sql/${schema.file}</srcFile>
                                <srcFile>src/main/sql/csmCreateSchema.sql</srcFile>
                                <srcFile>src/main/sql/countries.sql</srcFile>
                                <srcFile>src/main/sql/oversightcommitteetypes.sql</srcFile>
                                <srcFile>src/main/sql/researchorganizationtypes.sql</srcFile>
                                <srcFile>src/main/sql/fundingmechanisms.sql</srcFile>
                                <srcFile>src/main/sql/rot_fundingmech_mapping.sql</srcFile>
                                <srcFile>src/main/sql/organizationalcontacttypes.sql</srcFile>
                                <srcFile>src/main/sql/csmBootstrapData.sql</srcFile>
                                <srcFile>src/main/sql/${csm.users.file}</srcFile>
                                <srcFile>src/main/sql/extraCreateSchema.sql</srcFile>
                            </srcFiles>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>


</project>
