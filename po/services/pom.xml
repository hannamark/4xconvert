    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <forkMode>once</forkMode>
                    <includes>
                        <include>**/*Test.java</include>
                        <include>**/*TestDb.java</include>
                    </includes>
                    <excludes>
                        <exclude>**/po/service/external/*</exclude>
                    </excludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <configuration>
                    <instrumentation>
                        <excludes>
                            <exclude>gov/nih/nci/po/service/external/*</exclude>
                        </excludes>
                    </instrumentation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ejb-plugin</artifactId>
                <configuration>
                    <ejbVersion>3.0</ejbVersion>
                    <archive>
                        <manifest>
                            <addClasspath>false</addClasspath>
                        </manifest>
                    </archive>
                    <generateClient>true</generateClient>
                    <clientIncludes>
                        <clientInclude>gov/nih/nci/services/**/**</clientInclude>
                        <clientInclude>gov/nih/nci/po/service/EntityValidationException.class</clientInclude>
                        <clientInclude>gov/nih/nci/po/service/OneCriterionRequiredException.class</clientInclude>
                        <clientInclude>gov/nih/nci/po/service/SearchCriteriaValidationException.class</clientInclude>
                    </clientIncludes>
                    <clientExcludes>
                        <clientExclude>gov/nih/nci/services/Utils*</clientExclude>
                        <clientExclude>gov/nih/nci/services/**/*Helper*</clientExclude>
                        <clientExclude>gov/nih/nci/services/**/*Bean*</clientExclude>
                        <clientExclude>gov/nih/nci/services/**/*Interceptor*</clientExclude>
                        <clientExclude>**hibernate.cfg.xml</clientExclude>
                        <clientExclude>**db-*.xml</clientExclude>
                    </clientExcludes>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.fiveamsolutions</groupId>
                <artifactId>nci-commons-maven-plugin</artifactId>
                <version>${nci-commons.version}</version>
                <configuration>
                    <autoNameIndexes>true</autoNameIndexes>
                    <components>
                        <component>
                            <name>hbm2ddl</name>
                            <implementation>annotationconfiguration</implementation>
                        </component>
                    </components>
                    <componentProperties>
                        <drop>${hbm2ddl.drop.table}</drop>
                        <create>${hbm2ddl.create.table}</create>
                        <export>false</export>
                        <outputfilename>${schema.file}</outputfilename>
                        <console>false</console>
                        <jdk5>true</jdk5>
                        <configurationfile>${pom.basedir}/target/classes/hibernate.cfg.xml</configurationfile>
                    </componentProperties>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.hibernate</groupId>
                        <artifactId>hibernate</artifactId>
                        <version>${hibernate.version}</version>
                        <scope>provided</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.hibernate</groupId>
                        <artifactId>hibernate-annotations</artifactId>
                        <version>${hibernate.annotations.version}</version>
                        <scope>provided</scope>
                    </dependency>
                    <dependency>
                        <groupId>${jdbc.groupId}</groupId>
                        <artifactId>${jdbc.artifactId}</artifactId>
                        <version>${jdbc.version}</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <configuration>
                            <tasks>
                                <property name="output.dir" value="target/generated-sources/xsnapshot" />
                                <path id="xsnapshot.classpath">
                                    <pathelement location="src/main/xsnapshotResources" />
                                    <fileset dir="${settings.localRepository}">
                                        <include name="ant/ant/1.6.3/ant-1.6.3.jar" />
                                        <include name="commons-collections/commons-collections/3.2.1/commons-collections-3.2.1.jar" />
                                        <include name="commons-lang/commons-lang/2.3/commons-lang-2.3.jar" />
                                        <include name="commons-logging/commons-logging-api/1.0.4/commons-logging-api-1.0.4.jar" />
                                        <include name="xdoclet/xdoclet-xjavadoc/1.5.snapshot050611/xdoclet-xjavadoc-1.5.snapshot050611.jar" />
                                        <include name="xdoclet/xdoclet/1.2.3/xdoclet-1.2.3.jar" />
                                        <include name="xdoclet/xdoclet-xdoclet-module/1.2.3/xdoclet-xdoclet-module-1.2.3.jar" />
                                        <include name="net/sf/xsnapshot/xdoclet-xsnapshot-module/${xsnapshot.version}/xdoclet-xsnapshot-module-${xsnapshot.version}.jar" />
                                        <include name="net/sf/xsnapshot/xsnapshot/${xsnapshot.version}/xsnapshot-${xsnapshot.version}.jar" />
                                    </fileset>
                                </path>
                                <taskdef name="xsnapshotdoclet" classname="net.sf.xsnapshot.ant.XSnapshotDocletTask" classpathref="xsnapshot.classpath" />
                                <mkdir dir="${output.dir}" />
                                <property name="temp.bo.class.dir" value="target/bo-src" />
                                <mkdir dir="${temp.bo.class.dir}" />
                                <copy todir="${temp.bo.class.dir}">
                                    <fileset dir="${project.build.sourceDirectory}">
                                       <include name="gov/nih/nci/po/data/bo/*.java" />
                                    </fileset>
                                </copy>
                                <fileset dir="${temp.bo.class.dir}" id="model" />
                                <xsnapshotdoclet destdir="${output.dir}" verbose="true" mergedir="${output.dir}">
                                    <fileset refid="model" />
                                    <packageSubstitution packages="gov.nih.nci.po.data.bo" substituteWith="gov.nih.nci.po.data.dto" />
                                    <snapshot />
                                    <helper />
                                </xsnapshotdoclet>
                                <xsnapshotdoclet destdir="${project.build.outputDirectory}" verbose="true" mergedir="${output.dir}">
                                    <fileset refid="model" />
                                    <packageSubstitution packages="gov.nih.nci.po.data.bo" substituteWith="gov.nih.nci.po.data.dto" />
                                    <properties />
                                </xsnapshotdoclet>
                            </tasks>
                            <sourceRoot>target/generated-sources/xsnapshot</sourceRoot>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
            <resource>
                <directory>src/main/db/db-install</directory>
                <filtering>true</filtering>
                <includes>
                    <include>db-install.xml</include>
                </includes>
            </resource>
            <resource>
                <directory>src/main/db/db-upgrade</directory>
                <filtering>true</filtering>
                <includes>
                    <include>db-upgrade.xml</include>
                </includes>
            </resource>
        </resources>
        <testResources>
            <testResource>
                <directory>src/test/resources</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
    </build>
    <profiles>
        <profile>
            <id>local-db</id>
            <activation>
                <property><name>!skip-liquibase</name></property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.liquibase</groupId>
                        <artifactId>liquibase-plugin</artifactId>
                        <version>1.9.0.0</version>
                        <executions>
                            <execution>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>update</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <changeLogFile>src/main/db/db-changelog.xml</changeLogFile>
                            <driver>${jdbc.driverClassName}</driver>
                            <url>${jdbc.url}</url>
                            <username>${jdbc.username}</username>
                            <password>${jdbc.password}</password>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>init-db</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>sql-maven-plugin</artifactId>
                        <configuration>
                            <url>${database.url.prefix}template1</url>
                            <username>${admin.db.username}</username>
                            <password>${admin.db.password}</password>
                            <autocommit>true</autocommit>
                            <sqlCommand>
                                drop database if exists ${database.name};
                                drop user if exists ${jdbc.username};
                                create database ${database.name};
                                create user ${jdbc.username} with password '${jdbc.password}';
                                grant all on database ${database.name} to ${jdbc.username};
                            </sqlCommand>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
