        <maven-project-info-reports-plugin.version>2.1.2</maven-project-info-reports-plugin.version>
        <maven-ear-plugin.version>2.4</maven-ear-plugin.version>
        <maven-jar-plugin.version>2.3</maven-jar-plugin.version>
        <maven-ejb-plugin.version>2.2</maven-ejb-plugin.version>
        <maven-antrun-plugin.version>1.3</maven-antrun-plugin.version>
        <maven-war-plugin.version>2.1-beta-1</maven-war-plugin.version>
