<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/WEB-INF/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>*/nodecorate/*</pattern>
        <pattern>/static*</pattern>
        <pattern>/dojo/*</pattern>
        <pattern>/struts/*</pattern>
        <pattern>*popup*</pattern>  
        <pattern>*Ajax*</pattern>  
        <pattern>*ajax*</pattern>
        <pattern>*nodecor*</pattern>   
        <pattern>*lookup*</pattern>
        <pattern>/helpDocs/*</pattern>
    </excludes>


    <decorator name="mainNoHelp" page="mainNoHelp.jsp">
        <pattern>*home.action</pattern>
        <pattern>*welcome.action</pattern>
    </decorator>
    <decorator name="main" page="main.jsp">
        <pattern>/*</pattern>
    </decorator>

</decorators>
