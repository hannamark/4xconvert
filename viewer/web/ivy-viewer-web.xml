<!--
$Id: ivy-bda.xml 253 2008-07-17 01:29:14Z saksass $
$HeadURL: https://gforge.nci.nih.gov/svnroot/automation/trunk/bda/ivy/ivy-bda.xml $

This is the definition of a virtual module called bda-download that has a dependency
of bda-utils.  This virtual project causes the download of bda-utils from the NCICB Ivy
Repository.  This file currently points to the 1.0 version of bda-utils if you want to
use another version change the rev="1.0" to the desired version.
-->
<ivy-module version="1.0">
  <info organisation="cbiit" module="ctrp-viewer"/>

  <configurations>
    <conf name="default"/>
    <conf name="compile" extends="default"/>
    <conf name="runtime" extends="default"/>
    <conf name="test" extends="compile" />
    <conf name="test-pmd"/>
    <conf name="test-cobertura"/>
    <conf name="test-checkstyle"/>
    <conf name="test-simian"/>
  </configurations>

  <dependencies>
    <!-- default -->
    <dependency org="ajax"                   name="ajaxtags"                rev="1.3-beta-rc7"    conf="default->master"/>
    <dependency org="aopalliance"            name="aopalliance"             rev="1.0"             conf="default->master"/>
    <dependency org="apache"                 name="poi"                     rev="3.2-FINAL-20081019" conf="default->master"/>
    <dependency org="apache"                 name="struts2-core"            rev="2.1.6"           conf="default"/>
    <dependency org="apache"                 name="struts2-spring-plugin"   rev="2.1.6"           conf="default"/>
    <dependency org="apache"                 name="taglibs-standard"        rev="1.1.2"           conf="default->master"/>
    <dependency org="displaytag"             name="displaytag"              rev="1.1"             conf="default->master"/>
    <dependency org="freemarker"             name="freemarker"              rev="2.3.13"          conf="default"/>
    <dependency org="itext"                  name="itext"                   rev="2.0.6"           conf="default->master"/>
    <dependency org="jakarta"                name="commons-collections"     rev="3.2.1"           conf="default->master"/>
    <dependency org="jakarta"                name="commons-fileupload"      rev="1.2.1"           conf="default->master"/>
    <dependency org="jakarta"                name="commons-io"              rev="1.4"             conf="default->master"/>
    <dependency org="jakarta"                name="commons-lang"            rev="2.4"             conf="default->master"/>
    <dependency org="javax.ejb"              name="api"                     rev="3.0"             conf="default->master"/>
    <dependency org="javax.persistence"      name="persistence-api"         rev="1.0"             conf="default->master"/>
    <dependency org="javax.transaction"      name="jta"                     rev="1.0.1B"          conf="default->master"/>
    <dependency org="jboss"                  name="jboss-annotations-ejb3"  rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jericho"                name="html"                    rev="2.4"             conf="default->master"/>
    <dependency org="ncicb"                  name="clm"                     rev="4.0"             conf="default->master"/>
    <dependency org="ncicb"                  name="nci-commons-struts2"     rev="1.0.7"           conf="default->master"/>
    <dependency org="objectweb"              name="asm"                     rev="3.1"             conf="default->master"/>
    <dependency org="objectweb"              name="asm-attrs"               rev="1.5.3"           conf="default->master"/>
    <dependency org="ognl"                   name="ognl"                    rev="2.6.11"          conf="default"/>
    <dependency org="opensymphony"           name="sitemesh"                rev="2.3"             conf="default"/>
    <dependency org="opensymphony"           name="xwork"                   rev="2.1.2"           conf="default"/>
    <dependency org="org.directwebremoting"  name="dwr"                     rev="2.0.1"           conf="default->master"/>
    <dependency org="org.hibernate"          name="hibernate-annotations"   rev="3.2.0"           conf="default->master"/>
    <dependency org="org.hibernate"          name="hibernate-validator"     rev="3.0.0.GA"        conf="default->master"/>
    <dependency org="org.hibernate"  name="hibernate-commons-annotations"   rev="3.3.0.GA"        conf="default->master"/>
    <dependency org="org.jdom"               name="jdom"                    rev="0.9"             conf="default->master"/>
    <dependency org="springsource"           name="spring"                  rev="2.0.8"           conf="default"/>
    <dependency org="sun"                    name="jstl"                    rev="1.1.2"           conf="default->master"/>

    <!-- compile -->
    <dependency org="ehcache"                name="ehcache"                 rev="1.2.4"           conf="compile->master"/>
    <dependency org="jboss"                  name="javax.servlet"           rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="javax.servlet.jsp"       rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="ncicb"                  name="pa-ejb-client"           rev="1.1"             conf="compile->master"/>  
    <dependency org="ncicb"                  name="po-services-client"      rev="1.1.0.rc1"       conf="compile->master"/>
    <dependency org="ncicb"                  name="security"                rev="4.0.1"           conf="compile->master"/>
    <dependency org="postgresql"             name="postgresql-jdbc3"        rev="8.3-603"         conf="compile->master"/>
    <dependency org="sun"                    name="jstl"                    rev="1.1.2"           conf="compile->master"/>

    <!-- runtime -->
    <dependency org="ncicb"                  name="pa-ejb-client"           rev="1.1"             conf="runtime->runtime"/>  

    <!-- test -->
    <dependency org="mockrunner"             name="mockrunner"              rev="0.4.1"           conf="test->master"/>
    <dependency org="junit"                  name="junit"                   rev="4.4"             conf="test->master"/>

    <!-- other test targets -->
    <dependency org="checkstyle"             name="checkstyle-all"          rev="4.4"             conf="test-checkstyle->runtime"/>
    <dependency org="cobertura"              name="cobertura"               rev="1.9"             conf="test-cobertura->runtime"/>  
    <dependency org="pmd"                    name="pmd"                     rev="4.2.2"           conf="test-pmd->compile,runtime"/>
    <dependency org="redhillconsulting"      name="simian"                  rev="2.2.24"          conf="test-simian->compile"/>    
  </dependencies>
</ivy-module>
