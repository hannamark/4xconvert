    <dependency org="org.mockito"            name="mockito-all"             rev="1.8.4"           conf="test->master"/>
    <dependency org="ncicb"                  name="nci-commons-core"        rev="1.2.23"          conf="test->master"/>

    <!-- other test targets -->
    <dependency org="checkstyle"                name="checkstyle"           rev="5.0"             conf="test-checkstyle->master,runtime"/>
    <dependency org="net.sourceforge.cobertura" name="cobertura"            rev="1.9.4.1"         conf="test-cobertura->master,runtime"/>
    <dependency org="pmd"                       name="pmd"                  rev="4.2.5"           conf="test-pmd->master,runtime"/>
