    <dependency org="javax.servlet"          name="jstl"                    rev="1.1.2"           conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa"      name="coppa-commons"           rev="1.3.7"           conf="compile->master"/>
    <dependency org="ant-contrib"            name="ant-contrib"             rev="1.0b3"           conf="compile->master"/>

    <!-- test -->
    <dependency org="com.mockrunner"         name="mockrunner"              rev="0.4.1"           conf="test->master"/>
