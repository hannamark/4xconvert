<?xml version="1.0" encoding="UTF-8"?>
<jndiConfig xmlns="http://wsrf.globus.org/jndi/config">
  <service name="SERVICE-INSTANCE-PREFIX/ArmService">
    <resource name="configuration" type="gov.nih.nci.coppa.services.pa.armservice.service.globus.resource.ArmServiceResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/ArmService_registration.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="gov.nih.nci.coppa.services.pa.armservice.service.globus.resource.ArmServiceResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>resourceClass</name>
          <value>gov.nih.nci.coppa.services.pa.armservice.service.globus.resource.ArmServiceResource</value>
        </parameter>
        <parameter>
          <name>resourceKeyName</name>
          <value>{http://enterpriseservices.nci.nih.gov/PAServices/ArmService}ArmServiceResultsKey</value>
        </parameter>
        <parameter>
          <name>resourceKeyType</name>
          <value>java.lang.String</value>
        </parameter>
      </resourceParams>
    </resource>
    <resourceLink name="serviceconfiguration" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/PAServices/serviceconfiguration" />
    <resourceLink name="pAServicesHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/PAServices/home" />
  </service>
  <service name="SERVICE-INSTANCE-PREFIX/PAServices">
    <resource name="configuration" type="gov.nih.nci.coppa.services.pa.service.globus.resource.PAServicesResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/PAServices_registration.xml</value>
        </parameter>
        <parameter>
          <name>serviceMetadataFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the serviceMetadata extract -->
          <value>ETC-PATH/serviceMetadata.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="serviceconfiguration" type="gov.nih.nci.coppa.services.pa.service.PAServicesConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>etcDirectoryPath</name>
          <value>ETC-PATH</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="gov.nih.nci.coppa.services.pa.service.globus.resource.PAServicesResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
      </resourceParams>
    </resource>
    <resourceLink name="armServiceHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/ArmService/home" />
  </service>
</jndiConfig>

