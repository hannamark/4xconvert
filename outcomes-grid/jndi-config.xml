<?xml version="1.0" encoding="UTF-8"?>
<jndiConfig xmlns="http://wsrf.globus.org/jndi/config">
  <service name="SERVICE-INSTANCE-PREFIX/Business">
    <resource name="configuration" type="gov.nih.nci.coppa.services.outcomes.business.service.globus.resource.BusinessResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/Business_registration.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="gov.nih.nci.coppa.services.outcomes.business.service.globus.resource.BusinessResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
      </resourceParams>
    </resource>
    <resourceLink name="serviceconfiguration" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/OutcomesServices/serviceconfiguration" />
    <resourceLink name="outcomesServicesHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/OutcomesServices/home" />
    <resourceLink name="userHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/User/home" />
  </service>
  <service name="SERVICE-INSTANCE-PREFIX/User">
    <resource name="configuration" type="gov.nih.nci.coppa.services.outcomes.user.service.globus.resource.UserResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/User_registration.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="gov.nih.nci.coppa.services.outcomes.user.service.globus.resource.UserResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
      </resourceParams>
    </resource>
    <resourceLink name="serviceconfiguration" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/OutcomesServices/serviceconfiguration" />
    <resourceLink name="outcomesServicesHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/OutcomesServices/home" />
    <resourceLink name="businessHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/Business/home" />
  </service>
  <service name="SERVICE-INSTANCE-PREFIX/OutcomesServices">
    <resource name="configuration" type="gov.nih.nci.coppa.services.outcomes.service.globus.resource.OutcomesServicesResourceConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>performRegistration</name>
          <!-- Set this to false to skip ServiceGroup registration -->
          <value>PERFORM_REGISTRATION</value>
        </parameter>
        <parameter>
          <name>registrationTemplateFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the registration parameters template file (ignored if performRegistration is false) -->
          <value>ETC-PATH/OutcomesServices_registration.xml</value>
        </parameter>
        <parameter>
          <name>serviceMetadataFile</name>
          <!-- Set this to the relative path (from the container root, e.g GLOBUS_LOCATION for globus container) of the serviceMetadata extract -->
          <value>ETC-PATH/serviceMetadata.xml</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="serviceconfiguration" type="gov.nih.nci.coppa.services.outcomes.service.OutcomesServicesConfiguration">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
        <parameter>
          <name>etcDirectoryPath</name>
          <value>ETC-PATH</value>
        </parameter>
        <parameter>
          <name>gridServicePrincipalSeparator</name>
          <value>@gridServicePrincipalSeparator@</value>
        </parameter>
      </resourceParams>
    </resource>
    <resource name="home" type="gov.nih.nci.coppa.services.outcomes.service.globus.resource.OutcomesServicesResourceHome">
      <resourceParams>
        <parameter>
          <name>factory</name>
          <value>org.globus.wsrf.jndi.BeanFactory</value>
        </parameter>
      </resourceParams>
    </resource>
    <resourceLink name="userHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/User/home" />
    <resourceLink name="businessHome" target="java:comp/env/services/SERVICE-INSTANCE-PREFIX/Business/home" />
  </service>
</jndiConfig>

