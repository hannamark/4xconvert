<!--
$Id: ivy-bda.xml 253 2008-07-17 01:29:14Z saksass $
$HeadURL: https://gforge.nci.nih.gov/svnroot/automation/trunk/bda/ivy/ivy-bda.xml $

This is the definition of a virtual module called bda-download that has a dependency of bda-utils.  This virtual project causes the download of bda-utils from the NCICB Ivy Repository.  This file currently points to the 1.0 version of bda-utils if you want to use another version change the rev="1.0" to the desired version.
-->
<ivy-module version="1.0">
  <info organisation="cbiit" module="reg-web"
        />
  <configurations>
    <conf name="runtime" />
    <conf name="compile" extends="runtime"/>
    <conf name="test" extends="compile" />
    <conf name="test-pmd"/>
    <conf name="test-junit"/>
    <conf name="test-cobertura"/>
    <conf name="test-checkstyle"/>
    <conf name="test-simian"/>
    <conf name="selenium"/>
  </configurations>

  <dependencies>
    <!-- runtime -->
    <dependency org="org.ajaxtags"           name="ajaxtags"                rev="1.3-beta-rc7"    conf="runtime->master"/>
    <dependency org="net.htmlparser.jericho" name="jericho-html"            rev="2.4"             conf="runtime->master"/>
    <dependency org="org.apache.poi"         name="poi"                     rev="3.2-FINAL"       conf="runtime->master"/>
    <dependency org="org.apache.struts"      name="struts2-core"            rev="2.1.6"           conf="runtime->default">
       <exclude module="commons-logging"/>
    </dependency>
    <dependency org="taglibs"                name="standard"                rev="1.1.2"           conf="runtime->master"/>
    <dependency org="displaytag"             name="displaytag"              rev="1.1"             conf="runtime->master"/>
    <dependency org="org.freemarker"         name="freemarker"              rev="2.3.13"          conf="runtime->default"/>
    <dependency org="ncicb"                  name="nci-commons-struts2"     rev="1.2.18"          conf="runtime->default"/>
    <dependency org="ognl"                   name="ognl"                    rev="2.7"             conf="runtime->default"/>
    <dependency org="opensymphony"           name="sitemesh"                rev="2.3"             conf="runtime->default"/>
    <dependency org="com.opensymphony"       name="xwork"                   rev="2.1.2"           conf="runtime->default">
        <exclude module="commons-logging"/>
    </dependency>
    <dependency org="javax.servlet"          name="jstl"                    rev="1.1.2"           conf="runtime->master"/>
    <dependency org="org.hibernate"          name="hibernate-validator"     rev="3.0.0.ga"        conf="runtime->master"/>
    <dependency org="org.hibernate"          name="hibernate-commons-annotations" rev="3.3.0.ga"  conf="runtime->master"/>

    <!-- Grid Registration runtime dependencies -->
    <dependency org="caGrid"                 name="dorian"                  rev="1.3"             conf="compile->service">
        <exclude module="commons-lang"/>
    </dependency>

    <!-- compile -->
    <dependency org="commons-lang"           name="commons-lang"            rev="2.4"             conf="compile->master"/>
    <dependency org="commons-collections"    name="commons-collections"     rev="3.2.1"           conf="compile->master"/>
    <dependency org="commons-beanutils"      name="commons-beanutils"       rev="1.8.0"           conf="compile->master">
        <exclude module="commons-logging"/>
    </dependency>
    <dependency org="javax.ejb"              name="api"                     rev="3.0"             conf="compile->master"/>
    <dependency org="javax.persistence"      name="persistence-api"         rev="1.0"             conf="compile->master"/>
    <dependency org="jboss"                  name="activation"              rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="commons-logging"         rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="hibernate3"              rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="jboss-annotations-ejb3"  rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="javax.servlet"           rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="javax.servlet.jsp"       rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="log4j"                   rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="mail"                    rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa"      name="coppa-commons"           rev="1.3.6"           conf="compile->master"/>
    <dependency org="gov.nih.nci.iso-datatypes" name="iso-datatypes"           rev="2.0.0-alpha1"    conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa.po"   name="po-services-client"      rev="3.2.0-m10"       conf="compile->master"/>
    <dependency org="ncicb"                  name="security"                rev="4.2"             conf="compile->master"/>
    <dependency org="ncicb"                  name="nci-commons-core"        rev="1.2.18"          conf="compile->master"/>
    <dependency org="gov.nih.nci.security"   name="cgmm"                    rev="0.7.0"           conf="compile->cgmm-api"/>
    <dependency org="org.hibernate"          name="hibernate-validator"     rev="3.0.0.ga"        conf="compile->master"/>
    <dependency org="org.hibernate"          name="hibernate-annotations"   rev="3.2.0.ga"        conf="compile->master"/>
    <dependency org="postgresql"             name="postgresql"              rev="8.4-701.jdbc3"   conf="compile->master"/>
    <dependency org="ant-contrib"            name="ant-contrib"             rev="1.0b3"           conf="compile->master"/>

    <!-- Grid Compile Dependencies-->
    <dependency org="globus"                 name="axis"                    rev="1.2RC2"          conf="compile->master"/>
    <dependency org="globus"                 name="ws-enumeration"          rev="4.0.3"           conf="compile->master"/>
    <dependency org="caGrid"                 name="gridgrouper"              rev="1.3"             conf="compile->client"/>
    <dependency org="globus"                 name="ws-addressing"                rev="1.0"         conf="compile->master"/>
    <dependency org="caGrid"                 name="service-security-provider" rev="1.3"            conf="compile->client"/>

    <!-- test -->
    <dependency org="antlr"                  name="antlr"                   rev="2.7.6"           conf="test->master"/>
    <dependency org="jboss"                  name="cglib"                   rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="jboss"                  name="jboss"                   rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="jboss"                  name="jnpserver"               rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="jboss"                  name="hibernate3"              rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="jboss"                  name="jboss-ejb3x"             rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="jboss"                  name="jbossall-client"         rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="org.codehaus.cargo"     name="cargo-ant"               rev="0.8"             conf="test->master"/>
    <dependency org="org.codehaus.cargo"     name="cargo-core-uberjar"      rev="0.8"             conf="test->master"/>
    <dependency org="dom4j"                  name="dom4j"                   rev="1.6.1"           conf="test->master"/>
    <dependency org="org.hsqldb"             name="hsqldb"                  rev="1.8.0.10"        conf="test->master"/>
    <dependency org="com.mockrunner"         name="mockrunner"              rev="0.4.1"           conf="test->master"/>
    <dependency org="gov.nih.nci.security"   name="clm"                     rev="4.0"             conf="test->master"/>
    <dependency org="ncicb"                  name="security"                rev="4.2"             conf="test->master"/>
    <dependency org="org.jdom"               name="jdom"                    rev="1.1"             conf="test->master"/>
    <dependency org="postgresql"             name="postgresql"              rev="8.4-701.jdbc3"   conf="test->master"/>
