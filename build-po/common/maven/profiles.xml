	<profiles>
		<profile>
			<id>bda</id>
			<properties>
				<!-- used in maven build process -->
				<jboss.home>@jboss.home@</jboss.home>
				<schema.file>@db.po.file.name@</schema.file>
				<hbm2ddl.drop.table>@db.po.generate.drop@</hbm2ddl.drop.table>
				<hbm2ddl.create.table>@db.po.generate.create@</hbm2ddl.create.table>

				<!-- Maven uses these properties to maniuplate files, we are inserting tokens so that they can be de-tokenized by the install:jboss:po-ear:re-create target -->
				<!-- po-ds.xml -->
                <database.hostname>%%database.server%%</database.hostname>
                <database.port>%%database.port%%</database.port>				
				<database.url.prefix>jdbc:postgresql://%%database.server%%:%%database.port%%/</database.url.prefix>
				<database.name>%%database.name%%</database.name>
				<jdbc.username>%%database.user%%</jdbc.username>
				<jdbc.password>%%database.password%%</jdbc.password>
				<!-- security-config.xml -->
				<!-- don't use these now since values in file are blank, have to add prop for userid
				<ldap.host.url>%%ldap.url%%</ldap.host.url>
				<ldap.searchable.base>%%ldap.basedn%%</ldap.searchable.base>
				<ldap.user.id.label>%%ldap.user.field%%</ldap.user.id.label>
				-->
				<jdbc.driverClassName>%%database.driver%%</jdbc.driverClassName>
				<jdbc.xa.driverClassName>%%database.xa.driver%%</jdbc.xa.driverClassName>
				
				<!-- po-log4j.xml -->
				<log.level.nci-commons>%%app.log.level%%</log.level.nci-commons>
				<log.level.po>%%app.log.level%%</log.level.po>
				<log.level.default>%%app.log.level.default%%</log.level.default>

                <log.smtp.host>%%app.log.smtp.host%%</log.smtp.host>
                <log.smtp.from>%%app.log.smtp.from%%</log.smtp.from>
                <log.smtp.to>%%app.log.smtp.to%%</log.smtp.to>

				<!-- jndi.properties -->
				<jboss.naming.port>%%jboss.server.jndi.port%%</jboss.naming.port>
                <jboss.mq.service.POInvocationLayer.type.UIL2.ServerBindPort>%%jboss.mq.service.POInvocationLayer.type.UIL2.ServerBindPort%%</jboss.mq.service.POInvocationLayer.type.UIL2.ServerBindPort>
                
                <!-- SMM: Preliminary: used to drive Selenium tests 
                <jboss.port>@jboss.server.port@</jboss.port>
                <test.selenium.server.port>@selenium.proxy.port@</test.selenium.server.port>
                <test.selenium.server.debug>true</test.selenium.server.debug>        
                <test.selenium.browser>@selenium.browser@</test.selenium.browser>		
                -->		
				
				<ctep.username>%%ctep.username%%</ctep.username>
				<ctep.password>%%ctep.password%%</ctep.password>
				<ctep.url>%%ctep.url%%</ctep.url>
                <ctep.jms.subscription.name>%%ctep.jms.subscription.name%%</ctep.jms.subscription.name>
                <ctep.jms.topic.connection.factory.name>%%ctep.jms.topic.connection.factory.name%%</ctep.jms.topic.connection.factory.name>
                <ctep.jms.topic.name>%%ctep.jms.topic.name%%</ctep.jms.topic.name>
			</properties>
		</profile>
	    <profile>
	        <!-- To use specify the following: -Dpo.maven.profile.list=local,bda,quick -->
	        <id>quick</id>
	        <properties>
	             <cobertura.check.haltOnFailure>false</cobertura.check.haltOnFailure>
                 <maven.test.skip>true</maven.test.skip>
                 <pmd.skip>true</pmd.skip>
                 <checkstyle.skip>true</checkstyle.skip>
                 <cpd.skip>true</cpd.skip>              
            </properties>
       </profile>
    </profiles>
