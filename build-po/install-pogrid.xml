<project name="po-grid-installer" default="upgrade" basedir="."
  xmlns:ivy="antlib:org.apache.ivy.ant"
  >
  <description>
  	This build file is part of the COPPA-PO project. This is the po grid install file for the COPPA-PO project. This script is copied into the distribution and executed from the extracted distribution.  It is called from the master install.xml. This script has two flows install and upgrade.
    Install will do the following
    * Install binaries
    * Configure binaries
    * Install application
    * Configure application
    * Re-create database
    * Upgrade database
    Upgrade will do the following
    * Install application
    * Configure application
    * Upgrade database
    The script includes target that may not be used by all projects, but are included in here becaue it is a template. This script has targets to deal with the following, you can delete targets you don't want to work with
    Application servers (option for grid services also)
    * JBoss
    Databases
    * PostgreSQL
    This script requires java and ant to run. Every thing else it needs is included in the distribution.
  </description>

    <property name="grid.resource.dir" value="${working.dir}/${grid.dist.relative.dir}" />
    <property name="grid.application.dir" value="${working.dir}/grid-application" />
    <property name="grid.resource.dir.src" value="${basedir}/${grid.dist.relative.dir}" />

    <property name="resource.file.jboss-globus-lib" value="jboss-globus-libs-cagrid1_1.zip" />
    <property name="resource.file.jboss-globus-war" value="jboss-globus-wsrf-war-cagrid1_1.zip" />

    <property name="po-grid.dir.dist" value="${basedir}/${po-grid.dist.relative.dir}" />
    <property name="po-grid.dir.src" value="${basedir}/${po-grid.dist.relative.dir}" />
    <property name="po-grid.dir.target" value="wsrf.war" />
    <property name="po-grid.introduce.skeleton.service.name" value="CoreServices"/>

  <target name="install:po-grid-jboss:clean" unless="exclude.jboss">
    <sleep seconds="5" />
    <property name="backup.count" value="5"/>

    <if>
      <not>
        <equals arg1="${exclude.po-grid-jboss.backup}" arg2="true"/>
      </not>
      <then>
        <!-- Jboss backup, do not compress until install is finished -->
        <property name="backup.po-grid-jboss.base.dir" location="${application.base.path}/backup/po-grid"/>
        <!-- So these directories won't be included in the backup, they are not needed to use jboss -->
        <delete dir="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/work"/>
        <delete dir="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/tmp"/>

        <backup-dir
          src.dir="${po-grid-jboss.home}"
          backup.base.dir="${backup.po-grid-jboss.base.dir}"
          backup.count="${backup.count}"
          />
      </then>
    </if>
    <delete dir="${po-grid-jboss.home}"/>
  </target>

  <target name="install:po-grid-jboss:init" depends="common:init:pre">
	  <!-- determine if port configurations or port lists are being called -->
	  <if>
		  <isset property="po-grid-jboss.ncicb-standard.port-config"/>
		  <then>
			  <!-- Read some port properties from standard bindings file -->
			  <echo message="Using JBoss NCICB Standard port configurations"/>
			  <if>
				  <equals arg1="${jboss.major.version}" arg2="4"/>
				  <then>
					  <property name="po-grid-jboss.server.binding.template.location" value="${basedir}/${jboss-bindings.file}"/>
					  <echo message="po-grid port name -${po-grid-jboss.server.ports.name}"/>
				      <jboss-read-ports
					      jboss.server.ports.name="${po-grid-jboss.server.ports.name}"
    				        jboss.server.bindingfile.location="${po-grid-jboss.server.binding.template.location}"
				      	    jboss.server.jndi.port.property.name="po-grid-jboss.server.jndi.port"
				      	    jboss.server.port.property.name="po-grid-jboss.server.port"
    				        jboss.ejbinvoker.port.property.name="po-grid-jboss.ejbinvoker.port"
    				        jboss.server.rmi.port.property.name="po-grid-jboss.server.rmi.port"
    				        jboss.web.service.port.property.name="po-grid-jboss.web.service.port"
    				        jboss.service.rmiobject.port.property.name="po-grid-jboss.service.rmiobject.port"
    				        jboss.server.bind.port.property.name="po-grid-jboss.server.bind.port"
    				        jboss.hajndi.port.property.name="po-grid-jboss.hajndi.port"
    				        jboss.hajrmi.port.property.name="po-grid-jboss.hajrmi.port"
    				        jboss.cobraorb.port.property.name="po-grid-jboss.cobraorb.port"
    				        jboss.jmx-rmi.port.property.name="po-grid-jboss.jmx-rmi.port"
    				        jboss.snmp-trapd.port.property.name="po-grid-jboss.snmp-trapd.port"
    				        jboss.snmp.port.property.name="po-grid-jboss.snmp.port"
    				        jboss.jms.port.property.name="po-grid-jboss.jms.port"
    				        jboss.remoting.port.property.name="po-grid-jboss.remoting.port"
    				        jboss.messaging.port.property.name="po-grid-jboss.messaging.port"
				      />
					  <jboss-bindings-validate
					      jboss.server.ports.name="${po-grid-jboss.server.ports.name}"
						  jboss.server.bindingfile.location="${po-grid-jboss.server.binding.template.location}"
						  />
				  </then>
				  <elseif>
					  <equals arg1="${jboss.major.version}" arg2="5"/>
					  <then>
						  <property name="po-grid-jboss.server.bindingfile.location" value="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/conf/bindingservice.beans/META-INF/bindings-jboss-beans.xml"/>
						  <property name="temp.bindings.file" value="${temp.dir}/unmodified-bindings-jboss-beans.xml"/>
						  <copy tofile="${temp.bindings.file}" file="${bda-utils.dir}/resource/${jboss.binaries.relative.dir}/unmodified-bindings-jboss-beans.xml"/>
						  <jboss51-bindings-nci
							  jboss.server.bindingfile.location="${temp.bindings.file}"
							  />
						  <jboss51-read-ports-nci
							  jboss.server.bindingfile.location="${temp.bindings.file}"
							  />
					  </then>
				  </elseif>
			  </if>
			  <echo message="http -${po-grid-jboss.server.port} "/>
			  <echo message="http -${po-grid-jboss.server.jndi.port} "/>
			  <properties-exist
				  properties.list="po-grid-jboss.server.jndi.port,po-grid-jboss.server.port,po-grid-jboss.server.ports.name"
				  />
		  </then>
		  <else>
			  <!-- else ensure that all ports are set, since these will be removed from install-properties.template we will verify here.  They have to be removed so the validator works with or without the properties or we have to change the format of the file. -->
			  <echo message="Using custom JBoss port configurations"/>
			  <property name="po-grid-jboss.server.binding.template.location" value="${bda-utils.dir}/resource/${jboss.binaries.relative.dir}/bindings.xml"/>
			  <properties-exist
				  properties.list="po-grid-jboss.server.jndi.port,po-grid-jboss.server.port,po-grid-jboss.cobraorb.port,po-grid-jboss.hajndi.port,po-grid-jboss.hajrmi.port,po-grid-jboss.jmx-rmi.port,po-grid-jboss.messaging.port,po-grid-jboss.pooledha.port,po-grid-jboss.server.bind.port,po-grid-jboss.server.rmi.port,po-grid-jboss.service.rmiobject.port,po-grid-jboss.snmp.port,po-grid-jboss.snmp-trapd.port,po-grid-jboss.web.service.port,po-grid-jboss.unifiedinvoker.port,po-grid-jboss.hajndi.auto.port,po-grid-jboss.ssl.port,po-grid-jboss.jms2.netty.port,po-grid-jboss.jms2.netty-ssl.port,po-grid-jboss.transaction.recovery.port,po-grid-jboss.transaction.status.port,po-grid-jboss.transaction.processid.port"
				  />
		  </else>
	  </if>
  </target>
  <target name="common:po-grid-jboss:init" depends="common:init:pre" unless="exclude.jboss">
	  <property name="po-grid-jboss.ssl.enable" value="false"/>
	  <property name="po-grid-jboss.home" value="${application.base.path}/${po-grid-jboss.relative.path}"/>
	  <jboss-version
		  />
	  <if>
		  <equals arg1="${po-grid-jboss.http-connector.remove}" arg2="true"/>
		  <then>
			  <property name="po-grid-jboss.application.url" value="https://${po-grid-jboss.server.hostname}:${po-grid-jboss.grid.secure.port}/wsrf/services/cagrid/CoreServices"/>
		  </then>
		  <else>
			  <property name="po-grid-jboss.application.url" value="http://${po-grid-jboss.server.hostname}:${po-grid-jboss.server.port}/wsrf/services/cagrid/CoreServices"/>
		  </else>
	  </if>
	  <available file="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/conf/jboss-service.xml" property="po-grid-jboss.exists"/>
	  <basename file="${po-grid-jboss.ssl.keystore.location}" property="po-grid-jboss.ssl.keystore.file"/>
	  <dirname file="${po-grid-jboss.ssl.keystore.location}" property="po-grid-jboss.ssl.keystore.dir"/>
	  <basename file="${po-grid-jboss.grid.secure.cert.location}" property="po-grid-jboss.grid.secure.cert.file"/>
	  <dirname file="${po-grid-jboss.grid.secure.cert.location}" property="po-grid-jboss.grid.secure.dir"/>
	  <basename file="${po-grid-jboss.grid.secure.key.location}" property="po-grid-jboss.grid.secure.key.file"/>
	  <property name="po-grid-jboss.socket.ports" value="${po-grid-jboss.server.port},${po-grid-jboss.server.rmi.port},${po-grid-jboss.server.jndi.port},${po-grid-jboss.service.rmiobject.port},${po-grid-jboss.jms.port},${po-grid-jboss.web.service.port}"/>
  </target>

  <target name="install:po-grid-jboss:binaries" unless="exclude.po-grid">
    <jboss-install-binaries
	application.base.path="${application.base.path}/pogrid"
	jems.install.option="default" 
	jboss.home="${po-grid-jboss.home}" 
	jboss.server.name="${po-grid-jboss.server.name}" 
            />
  </target>

    <!-- Installs the po-grid application to JBOSS -->
    <target name="install:po-grid-jboss:grid" description="Deploy Coppa PO Grid application to JBOSS" unless="exclude.po-grid">
      <echo message="Entirely removing existing wsrf.war deployment"/>
      <delete dir="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/deploy/${po-grid.dir.target}"/>
        <mkdir dir="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/deploy/${po-grid.dir.target}"/>

        <unzip dest="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/lib" src="${grid.resource.dir.src}/${resource.file.jboss-globus-lib}" />
        <unzip dest="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/deploy/${po-grid.dir.target}" src="${grid.resource.dir.src}/${resource.file.jboss-globus-war}" />

        <unzip dest="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/deploy/${po-grid.dir.target}" src="${po-grid.dir.src}/${po-grid.artifact.file}" />
    </target>


    <!-- Configures installed po-grid application -->
    <target name="install:po-grid-jboss:grid:configure" description="Configure po-grid service based on properties" unless="exclude.po-grid">
        <!--
        NOTE: during an upgrade the <jboss-configure/> macrodef (which calls <grid-secure-configure-connector/> macrodef) 
        which copies over the -cert.pem and -key.pem host cert file over to the ${jboss.home}/server/${po-grid-jboss.server.name}/conf directory
        therefore we're changing the appserver.conf.dir property to point to pogrid.grid.secure.dir instead.
        
        This macro required whenever the host certs are not installed within the ${jboss.home}/server/${jboss.server.name.grid}/conf directory   
        grid-appserver-configure
        -->
	<echoproperties prefix="po-grid-jboss"/>
	<jboss-configure-grid
		jboss.home="${po-grid-jboss.home}"
		jboss.server.name="${po-grid-jboss.server.name}"
		jboss.port.http="${po-grid-jboss.server.port}"
		jboss.port.ssl="${po-grid-jboss.ssl.port}"
		jboss.hostname="${po-grid-jboss.server.hostname}"
		jboss.external.http.host="${po-grid-jboss.external.http.host}"
		jboss.external.http.port="${po-grid-jboss.external.http.port}"
		jboss.external.grid.secure.host="${po-grid-jboss.external.grid.secure.host}"
		jboss.external.grid.secure.port="${po-grid-jboss.external.grid.secure.port}"
		jboss.grid.secure.enable="${po-grid-jboss.grid.secure.enable}"
		jboss.grid.secure.dir="${po-grid-jboss.grid.secure.dir}"
		jboss.grid.secure.port="${po-grid-jboss.grid.secure.port}"
		jboss.grid.secure.key.file="${po-grid-jboss.grid.secure.key.file}"
		jboss.grid.secure.cert.file="${po-grid-jboss.grid.secure.cert.file}"
		grid.application.name="${po-grid.introduce.skeleton.service.name}"
		/>

    </target>

  <target name="install:po-grid-jboss:configure" unless="exclude.po-grid">
        <!-- create a new template bindings file from template (using ports for po-grid -->
	
	  <jboss-configure
		  jboss.home="${po-grid-jboss.home}"
		  jboss.server.name="${po-grid-jboss.server.name}"
		  jboss.server.ports.name="${po-grid-jboss.server.ports.name}"
		  jboss.server.bindingfile.location="${po-grid-jboss.home}/bindings/bindings.xml"
		  jboss.server.binding.template.location="${po-grid-jboss.server.binding.template.location}"
		  jboss.server.jndi.port="${po-grid-jboss.server.jndi.port}"
		  jboss.server.port="${po-grid-jboss.server.port}"
		  jboss.cobraorb.port="${po-grid-jboss.cobraorb.port}"
		  jboss.ejbinvoker.port="${po-grid-jboss.ejbinvoker.port}"
		  jboss.hajndi.port="${po-grid-jboss.hajndi.port}"
		  jboss.hajrmi.port="${po-grid-jboss.hajrmi.port}"
		  jboss.jms.port="${po-grid-jboss.jms.port}"
		  jboss.jmx-rmi.port="${po-grid-jboss.jmx-rmi.port}"
		  jboss.messaging.port="${po-grid-jboss.messaging.port}"
		  jboss.pooledha.port="${po-grid-jboss.pooledha.port}"
		  jboss.remoting.port="${po-grid-jboss.remoting.port}"
		  jboss.server.bind.port="${po-grid-jboss.server.bind.port}"
		  jboss.server.rmi.port="${po-grid-jboss.server.rmi.port}"
		  jboss.service.rmiobject.port="${po-grid-jboss.service.rmiobject.port}"
		  jboss.snmp.port="${po-grid-jboss.snmp.port}"
		  jboss.snmp-trapd.port="${po-grid-jboss.snmp-trapd.port}"
		  jboss.web.service.port="${po-grid-jboss.web.service.port}"
		  jboss.unifiedinvoker.port="${po-grid-jboss.unifiedinvoker.port}"
		  jboss.hajndi.auto.port="${po-grid-jboss.hajndi.auto.port}"
		  jboss.ssl.port="${po-grid-jboss.ssl.port}"
		  jboss.jms2.netty.port="${po-grid-jboss.jms2.netty.port}"
		  jboss.jms2.netty-ssl.port="${po-grid-jboss.jms2.netty-ssl.port}"
		  jboss.transaction.recovery.port="${po-grid-jboss.transaction.recovery.port}"
		  jboss.transaction.status.port="${po-grid-jboss.transaction.status.port}"
		  jboss.transaction.processid.port="${po-grid-jboss.transaction.processid.port}"
		  jboss.conf.dir="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/conf"
		  jboss.server-xml.file="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/deploy/jbossweb-tomcat55.sar/server.xml"
		  jboss.ssl.enable="${po-grid-jboss.ssl.enable}"
		  jboss.ssl.keystore.file="${po-grid-jboss.ssl.keystore.file}"
		  jboss.ssl.keystore.dir="${po-grid-jboss.ssl.keystore.dir}"
		  jboss.ssl.keystore.pass="${po-grid-jboss.ssl.keystore.pass}"
		  jboss.ssl.keystore.alias="${po-grid-jboss.ssl.keystore.alias}"
		  jboss.ssl.fullyqualified.hostname="${po-grid-jboss.ssl.fullyqualified.hostname}"
		  jboss.external.ssl.host="${po-grid-jboss.external.ssl.host}"
		  jboss.external.ssl.port="${po-grid-jboss.external.ssl.port}"
		  jboss.external.http.host="${po-grid-jboss.external.http.host}"
		  jboss.external.http.port="${po-grid-jboss.external.http.port}"
		  jboss.external.grid.secure.host="${po-grid-jboss.external.grid.secure.host}"
		  jboss.external.grid.secure.port="${po-grid-jboss.external.grid.secure.port}"
		  jboss.server.hostname="${po-grid-jboss.server.hostname}"
		  jboss.grid.configure="true"
		  jboss.grid.secure.dir="${po-grid-jboss.grid.secure.dir}"
		  jboss.grid.secure.enable="${po-grid-jboss.grid.secure.enable}"
		  jboss.grid.secure.port="${po-grid-jboss.grid.secure.port}"
		  jboss.grid.secure.key.file="${po-grid-jboss.grid.secure.key.file}" 
		  jboss.grid.secure.cert.file="${po-grid-jboss.grid.secure.cert.file}" 
		  jboss.java.opts="${po-grid-jboss.java.opts}"
		  jboss.logs.dir="${po-grid-jboss.home}/server/${po-grid-jboss.server.name}/log"
		  jboss.http-connector.remove="${po-grid-jboss.http-connector.remove}"
		  />
  </target>

  <target name="install:po-grid-jboss:stop" unless="exclude.po-grid">
    <jboss-stop-jboss jboss.server.jndi.port="${po-grid-jboss.server.jndi.port}" jboss.server.name="${po-grid-jboss.server.name}"/>
  </target>

    <target name="install:po-grid-jboss:start" unless="exclude.po-grid">
    <if>
      <not>
        <isset property="exclude.start.servers"/>
      </not>
      <then>
	      <jboss-start-jboss
		      jboss.home="${po-grid-jboss.home}"
		      jboss.server.name="${po-grid-jboss.server.name}"
		      />
      </then>
    </if>
    </target>

    <target name="install:po-grid-jboss:validation:pre-install" description="Runs pre-install validation checks bda-utils"
	    depends="
	    common:po-grid-jboss:init,common:init,
	    install:common:validation:pre-install
	    ">
	    <validate-pre-install-jboss
		    jboss.ssl.enable="${po-grid-jboss.ssl.enable}"
		    jboss.ssl.keystore.file="${po-grid-jboss.ssl.keystore.file}"
		    jboss.ssl.keystore.dir="${po-grid-jboss.ssl.keystore.dir}"
		    jboss.ssl.keystore.pass="${po-grid-jboss.ssl.keystore.pass}"
		    jboss.ssl.keystore.alias="${po-grid-jboss.ssl.keystore.alias}"
		    jboss.ssl.fullyqualified.hostname="${po-grid-jboss.ssl.fullyqualified.hostname}"
		    />
    </target>
    <target name="install:po-grid-jboss:validation:pre-install:ports" description="Checks to see if configured ports are listenting and fails buld, meant to be run after jboss:stop"
	    depends="
	    common:init,
	    install:po-grid-jboss:stop
	    ">
	    <validate-pre-jboss-ports
		    jboss.socket.ports="${po-grid-jboss.socket.ports}" 
		    hostname="${po-grid-jboss.server.hostname}"
		    />
    </target>
    <target name="install:po-grid-jboss:validation:post-install" description="Run post-install checks from bda-utils"
	    depends="
	    common:po-grid-jboss:init,
	    common:init,
	    install:po-grid-jboss:start
	    ">
	    <if>
		    <not>
			    <isset property="exclude.start.servers"/>
		    </not>
		    <then>
			    <validate-post-jboss
				    jboss.socket.list="${po-grid-jboss.socket.list}" 
				    jboss.home="${po-grid-jboss.home}" 
				    jboss.hostname="${po-grid-jboss.server.hostname}" 
				    jboss.application.url="${po-grid-jboss.application.url}" 
				    />
		    </then>
	    </if>
    </target>

  <target name="install:po-grid-jboss" description="Wrapper scripts that calls all required targets to install the jboss container" unless="exclude.jboss"
	  depends="
	  common:po-grid-jboss:init,
	  common:init,
	  install:po-grid-jboss:init,
	  install:po-grid-jboss:validation:pre-install,
	  install:common:validation:pre-install,
	  install:po-grid-jboss:stop,
	  install:po-grid-jboss:validation:pre-install:ports,
	  install:po-grid-jboss:clean,
	  install:po-grid-jboss:binaries,
	  install:po-grid-jboss:configure,
	  install:po-grid-jboss:re-configure,
	  install:po-grid-jboss:grid,
	  install:po-grid-jboss:grid:configure,
	  install:po-grid-jboss:post,
	  install:po-grid-jboss:start,
	  install:po-grid-jboss:validation:post-install
	  " >
  </target>

  <target name="install:po-grid-jboss:re-configure" depends="install:po-ear-jboss:init" unless="exclude.po-grid">
      <mkdir dir="${temp.dir}/${po-grid.dist.relative.dir}"/>
      <delete dir="${temp.dir}/${po-grid.dist.relative.dir}"/>
      <mkdir dir="${temp.dir}/${po-grid.dist.relative.dir}"/>
      <unzip src="${po-grid.dir.dist}/${po-grid.artifact.file}" dest="${temp.dir}/${po-grid.dist.relative.dir}"/>
      <unzip src="${temp.dir}/${po-grid.dist.relative.dir}/WEB-INF/lib/${po-grid.introduce.skeleton.service.name}-config.jar" dest="${temp.dir}/${po-grid.introduce.skeleton.service.name}-config"/>
      <!-- Filter contents of the files below to be based on install time properties. Paths below are paths witin the ear. -->
      <var name="file.list" value="${po-grid.introduce.skeleton.service.name}-config/jndi.properties"/>

      <for list="${file.list}" param="file.relative.name">
          <sequential>
              <propertyregex property="file.name"
                  input="@{file.relative.name}"
                  regexp="^.*\/(.*)"
                  select="\1"
                  override="true"
                  />
              <propertyregex property="relative.dir"
                  input="@{file.relative.name}"
                  regexp="^(.*)\/.*"
                  select="\1"
                  override="true"
                  />
              <echo message="relative.dir=${relative.dir} file.name=${file.name}"/>
              <replace file="${temp.dir}/${relative.dir}/${file.name}" token="%%" value="@"/>
              <copy todir="${temp.dir}" file="${temp.dir}/${relative.dir}/${file.name}" filtering="true" overwrite="true">
                  <filterset>
                      <filter token="jboss.server.jndi.port" value="${jboss.server.jndi.port}"/>
                      <filter token="pogrid.jndi.principal" value="${pogrid.jndi.principal}"/>
                      <filter token="pogrid.jndi.credentials" value="${pogrid.jndi.credentials}"/>
                  </filterset>
              </copy>
              <copy todir="${temp.dir}/${relative.dir}" file="${temp.dir}/${file.name}" overwrite="true"/>
          </sequential>
      </for>
      <move file="${po-grid.dir.dist}/${po-grid.artifact.file}" tofile="${po-grid.dir.dist}/${po-grid.artifact.file}.orig"/>
      <jar destfile="${temp.dir}/${po-grid.dist.relative.dir}/WEB-INF/lib/${po-grid.introduce.skeleton.service.name}-config.jar"
           basedir="${temp.dir}/${po-grid.introduce.skeleton.service.name}-config" compress="false"/>

      <zip basedir="${temp.dir}/${po-grid.dist.relative.dir}" compress="true" file="${po-grid.dir.dist}/${po-grid.artifact.file}" update="false"/>
  </target>

