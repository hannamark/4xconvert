<!--
$Id: ivy-bda.xml 253 2008-07-17 01:29:14Z saksass $
$HeadURL: https://gforge.nci.nih.gov/svnroot/automation/trunk/bda/ivy/ivy-bda.xml $

This is the definition of a virtual module called bda-download that has a dependency of bda-utils.  This virtual project causes the download of bda-utils from the NCICB Ivy Repository.  This file currently points to the 1.0 version of bda-utils if you want to use another version change the rev="1.0" to the desired version.
-->
<ivy-module version="1.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="cbiit" module="pa-ejb"/>
  <configurations>
    <conf name="compile"/>
    <conf name="test" extends="compile"/>
    <conf name="maven"/>
    <conf name="test-pmd"/>
    <conf name="test-junit"/>
    <conf name="test-cobertura"/>
    <conf name="test-checkstyle"/>
    <conf name="test-simian"/>
  </configurations>

  <dependencies>
    <!-- compile -->
    <dependency org="com.lowagie"            name="itext"                   rev="2.1.7"           conf="compile->master"/>
    <dependency org="com.lowagie"            name="itext-rtf"               rev="2.1.7"           conf="compile->master"/>
    <dependency org="commons-collections"    name="commons-collections"     rev="3.2.1"           conf="compile->master"/>
    <dependency org="commons-io"             name="commons-io"              rev="1.4"             conf="compile->master"/>
    <dependency org="commons-lang"           name="commons-lang"            rev="2.4"             conf="compile->master"/>
    <dependency org="commons-beanutils"           name="commons-beanutils"            rev="1.6"             conf="compile->master"/>
    <dependency org="commons-dbutils"        name="commons-dbutils"         rev="1.5"             conf="compile->master"/>
    <dependency org="javax.persistence"      name="persistence-api"         rev="1.0"             conf="compile->master"/>

    <dependency org="jboss"                  name="commons-logging"         rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="hibernate3"              rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="jboss-ejb3x"             rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="jbossall-client"         rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="jboss-annotations-ejb3"  rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="log4j"                   rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="mail"                    rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="joda-time"              name="joda-time"               rev="1.6.2"           conf="compile->master"/>
    <dependency org="de.jollyday"            name="jollyday"                rev="0.4.5"           conf="compile->master" transitive="false"/>
    <dependency org="net.sf.ehcache"      name="ehcache"            rev="1.2.4"           conf="compile->master" transitive="false">
       <exclude module="commons-logging"/>
    </dependency>


    <dependency org="gov.nih.nci.security"   name="clm"                     rev="4.0"             conf="compile->master"/>
    <dependency org="gov.nih.nci.security"   name="cgmm"                    rev="0.7.0"           conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa"      name="coppa-commons"           rev="1.3.10-SNAPSHOT"           conf="compile->master"/>
    <dependency org="gov.nih.nci.iso-datatypes" name="iso-datatypes"        rev="2.0.0-alpha1"    conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa"      name="nci-commons-ctrp-core"   rev="1.4.10-SNAPSHOT"  conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa"      name="nci-commons-ctrp-struts2" rev="1.4.10-SNAPSHOT" conf="compile->default"/>

    <dependency org="gov.nih.nci.coppa.po"   name="po-services-client"      rev="3.10.0-SNAPSHOT"    conf="compile->master"/>
    <dependency org="csmapi"                 name="csmapi"                  rev="4.2"             conf="compile->master"/>
    <dependency org="xerces"                 name="xercesImpl"              rev="2.6.0"           conf="compile->master"/>

    <dependency org="org.hibernate"          name="hibernate-annotations"   rev="3.2.0.ga"        conf="compile->master"/>
    <dependency org="org.hibernate"          name="hibernate-validator"     rev="3.0.0.ga"        conf="compile->master"/>
    <dependency org="org.hibernate"          name="hibernate-commons-annotations" rev="3.3.0.ga"  conf="compile->master"/>
    <dependency org="org.mockito"            name="mockito-all"             rev="1.8.4"           conf="compile->master"/>
    <dependency org="org.jdom"               name="jdom"                    rev="1.1"             conf="compile->master"/>

    <!-- Grid Compile Dependencies -->
    <dependency org="caGrid"                 name="caGrid-dorian-client"                  rev="1.3"             conf="compile->master"/>
    <dependency org="caGrid"                 name="caGrid-dorian-common"                  rev="1.3"             conf="compile->master"/>
    <dependency org="caGrid"                 name="opensaml"                  rev="1.3"             conf="compile->master"/>
    <dependency org="caGrid"                 name="authentication-service-client"                  rev="1.3"             conf="compile->master"/>
    <dependency org="caGrid"                 name="authentication-service-stubs"                  rev="1.3"             conf="compile->master"/>
    <dependency org="caGrid"                 name="caGrid-dorian-service"                  rev="1.3"             conf="compile->master">
        <exclude module="commons-lang"/>
    </dependency>
    <dependency org="caGrid"                 name="caGrid-dorian-stubs"                  rev="1.3"             conf="compile->master"/>
    <dependency org="globus"                 name="axis"                    rev="1.2RC2"          conf="compile->master"/>
    <dependency org="globus"                 name="ws-enumeration"          rev="4.0.3"           conf="compile->master"/>
    <dependency org="globus"                 name="ws-core-client"          rev="4.0.3"           conf="compile->master"/>
    <dependency org="globus"                 name="jcog"                    rev="1.2"             conf="compile->master"/>

    <!-- Grid Grouper compile dependencies -->
    <dependency org="caGrid"                 name="gridgrouper-client"             rev="1.3"             conf="compile->master"/>
    <dependency org="caGrid"                 name="gridgrouper-stubs"             rev="1.3"             conf="compile->master"/>
    <dependency org="caGrid"                 name="service-security-provider-client" rev="1.3"            conf="compile->master"/>
    <dependency org="globus"                 name="ws-addressing"           rev="1.0"         conf="compile->master"/>

    <!-- Maven management -->
    <dependency org="org.apache.maven"       name="maven-ant-tasks"         rev="2.1.3"          conf="maven->master"/>

    <!-- test -->
    <dependency org="antlr"                  name="antlr"                   rev="2.7.6"           conf="test->master"/>
    <dependency org="dom4j"                  name="dom4j"                   rev="1.6.1"           conf="test->master"/>
    <dependency org="jboss"                  name="cglib"                   rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="org.hsqldb"             name="hsqldb"                  rev="1.8.0.10"        conf="test->master"/>
    <dependency org="commons-beanutils"      name="commons-beanutils"       rev="1.8.0"           conf="test->master"/>
    <dependency org="org.mockito"            name="mockito-all"             rev="1.8.4"           conf="test->master"/>
    <dependency org="org.mockftpserver"            name="MockFtpServer"             rev="2.4"           conf="test->master"/>
    <dependency org="org.slf4j"            name="slf4j-api"             rev="1.6.0"           conf="test->master"/>
    <dependency org="org.slf4j"            name="slf4j-log4j12"             rev="1.6.0"           conf="test->master"/>

    <!-- other test targets -->
    <dependency org="checkstyle"                name="checkstyle"           rev="5.0"             conf="test-checkstyle->master,runtime"/>
    <dependency org="net.sourceforge.cobertura" name="cobertura"            rev="1.9.4.1"         conf="test-cobertura->master,runtime"/>
    <dependency org="junit"                     name="junit"                rev="4.8.2"           conf="test-junit->master,runtime"/>
    <dependency org="pmd"                       name="pmd"                  rev="4.2.5"           conf="test-pmd->master,runtime"/>
    <dependency org="redhill"                   name="simian"               rev="2.2.4"           conf="test-simian->master,runtime"/>
  </dependencies>
</ivy-module>
