        <recover>false</recover>  
        <job-data-map allows-transient-data="true">
            <entry>
                <key>ejb</key>
                <value>pa/PDQUpdateGeneratorTaskServiceBean/local</value>
            </entry>
            <entry>
                <key>interfaceName</key>
                <value>gov.nih.nci.pa.service.util.PDQUpdateGeneratorTaskServiceLocal</value>
            </entry>
            <entry>
                <key>method</key>
                <value>performTask</value>
            </entry>
            <entry>
                <key>java.naming.factory.initial</key>
                <value>org.jnp.interfaces.NamingContextFactory</value>
            </entry>        
            <entry>
