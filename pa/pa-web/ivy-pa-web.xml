<!--
$Id: ivy-bda.xml 253 2008-07-17 01:29:14Z saksass $
$HeadURL: https://gforge.nci.nih.gov/svnroot/automation/trunk/bda/ivy/ivy-bda.xml $

This is the definition of a virtual module called bda-download that has a dependency of bda-utils.  This virtual project causes the download of bda-utils from the NCICB Ivy Repository.  This file currently points to the 1.0 version of bda-utils if you want to use another version change the rev="1.0" to the desired version.
-->
<ivy-module version="1.0" xmlns:m="http://ant.apache.org/ivy/maven">
  <info organisation="cbiit" module="pa-web"  />
  <configurations>
    <conf name="runtime"/>
    <conf name="compile" extends="runtime"/>
    <conf name="selenium"/>
    <conf name="test" extends="compile" />
    <conf name="test-pmd"/>
    <conf name="test-junit"/>
    <conf name="test-cobertura"/>
    <conf name="test-checkstyle"/>
    <conf name="test-simian"/>
  </configurations>

  <dependencies>
    <!-- runtime -->
    <dependency org="gov.nih.nci.coppa"      name="nci-commons-ctrp-struts2" rev="(,1.4.1]"       conf="runtime->default">
       <exclude module="nci-commons-ctrp-core"/>
    </dependency>
    <dependency org="displaytag"             name="displaytag"              rev="1.2"             conf="runtime->master"/>
    <dependency org="gov.nih.nci.caintegrator2" name="caDSR-beans"          rev="4.0"             conf="runtime->master"/>
    <dependency org="gov.nih.nci.caintegrator2" name="caDSR-client-framework"  rev="4.0"          conf="runtime->master"/>
    <dependency org="javax.servlet"          name="jstl"                    rev="1.1.2"           conf="runtime->master"/>
    <dependency org="ognl"                   name="ognl"                    rev="2.7"             conf="runtime->default"/>
    <dependency org="opensymphony"           name="quartz-all"              rev="1.6.3"           conf="runtime->default"/>
    <dependency org="opensymphony"           name="sitemesh"                rev="2.3"             conf="runtime->default"/>
    <dependency org="org.acegisecurity"      name="acegi-security"          rev="1.0.4"           conf="runtime->master"/>
    <dependency org="org.ajaxtags"           name="ajaxtags"                rev="1.3-beta-rc7"    conf="runtime->master"/>
    <dependency org="org.apache.struts"      name="struts2-core"            rev="2.2.3.1"           conf="runtime->default">
       <exclude module="commons-logging"/>
    </dependency>
    <dependency org="org.apache.struts"      name="struts2-spring-plugin"   rev="2.2.3.1"           conf="runtime->default">
       <exclude module="commons-logging"/>
    </dependency>
    <dependency org="org.apache.struts"      name="struts2-json-plugin"     rev="2.2.3.1"         conf="runtime->default"/>
    <dependency org="org.springframework"    name="spring"                  rev="2.0.5"           conf="runtime->master"/>
    <dependency org="taglibs"                name="standard"                rev="1.1.2"           conf="runtime->master"/>
    <!-- compile -->
    <dependency org="ant-contrib"            name="ant-contrib"             rev="1.0b3"           conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa"      name="nci-commons-ctrp-core"   rev="(,1.4.1]"        conf="compile->master"/>

    <dependency org="commons-collections"    name="commons-collections"     rev="3.2.1"           conf="compile->master"/>
    <dependency org="commons-lang"           name="commons-lang"            rev="2.4"             conf="compile->master"/>
    <dependency org="commons-beanutils"      name="commons-beanutils"       rev="1.8.0"           conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa"      name="coppa-commons"           rev="1.3.7"           conf="compile->master"/>
    <dependency org="gov.nih.nci.coppa.po"   name="po-services-client"      rev="(,3.8]"             conf="compile->master"/>
    <dependency org="gov.nih.nci.iso-datatypes" name="iso-datatypes"        rev="2.0.0-alpha1"    conf="compile->master"/>
    <dependency org="gov.nih.nci.security"   name="cgmm"                    rev="0.7.0"           conf="compile->master"/>
    <dependency org="gov.nih.nci.security"   name="clm"                     rev="4.0"             conf="compile->master"/>

    <dependency org="javax.persistence"      name="persistence-api"         rev="1.0"             conf="compile->master"/>
    <dependency org="javax.ejb"              name="ejb-api"                     rev="3.0"             conf="compile->master"/>
    <dependency org="jboss"                  name="jboss-annotations-ejb3"  rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="commons-logging"         rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="hibernate3"              rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="javax.servlet"           rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="javax.servlet.jsp"       rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="log4j"                   rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="jboss"                  name="jbossall-client"         rev="4.0.5.GA"        conf="compile->master"/>
    <dependency org="joda-time"              name="joda-time"               rev="1.6.2"           conf="compile->master"/>
    <dependency org="de.jollyday"            name="jollyday"                rev="0.4.5"           conf="compile->master" transitive="false"/>
    <dependency org="net.sf.ehcache"      name="ehcache"            rev="1.2.4"           conf="compile->master" transitive="false">
       <exclude module="commons-logging"/>
    </dependency>
    <dependency org="gov.nih.nci.coppa"      name="nci-commons-ctrp-core"   rev="(,1.4.1]"        conf="compile->master"/>
    <dependency org="gov.nih.nci.security"   name="security"                rev="4.2"             conf="compile->master"/>
    <dependency org="org.hibernate"          name="hibernate-annotations"   rev="3.2.0.ga"        conf="compile->master"/>
	<dependency org="postgresql"             name="postgresql"              rev="8.4-701.jdbc3"   conf="compile->master"/>

    <!-- test -->
    <dependency org="antlr"                  name="antlr"                   rev="2.7.6"           conf="test->master"/>
    <dependency org="dom4j"                  name="dom4j"                   rev="1.6.1"           conf="test->master"/>
    <dependency org="org.hsqldb"             name="hsqldb"                  rev="1.8.0.10"        conf="test->master"/>
    <dependency org="jboss"                  name="hibernate3"              rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="jboss"                  name="jboss-ejb3x"             rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="jboss"                  name="cglib"                   rev="4.0.5.GA"        conf="test->master"/>
    <dependency org="com.mockrunner"         name="mockrunner"              rev="0.4.1"           conf="test->master"/>
    <dependency org="postgresql"             name="postgresql"              rev="8.4-701.jdbc3"   conf="test->master"/>
    <dependency org="org.acegisecurity"      name="acegi-security"          rev="1.0.4"           conf="test->master"/>
    <dependency org="org.mockito"            name="mockito-all"             rev="1.8.4"           conf="test->master"/>
    <dependency org="gov.nih.nci.security"   name="cgmm"                    rev="0.7.0"           conf="test->master"/>

    <!-- other test targets -->
    <dependency org="checkstyle"                name="checkstyle"           rev="5.0"             conf="test-checkstyle->master,runtime"/>
    <dependency org="net.sourceforge.cobertura" name="cobertura"            rev="1.9.4.1"         conf="test-cobertura->master,runtime"/>
    <dependency org="junit"                     name="junit"                rev="4.8.2"           conf="test-junit->master,runtime"/>
    <dependency org="pmd"                       name="pmd"                  rev="4.2.5"           conf="test-pmd->master,runtime"/>
    <dependency org="redhill"                   name="simian"               rev="2.2.4"           conf="test-simian->master,runtime"/>

    <dependency org="gov.nih.nci.coppa"      name="coppa-commons-test"      rev="1.3.7"           conf="selenium->master"/>
    <dependency org="junit"                  name="junit"                   rev="4.8.2"             conf="selenium->master"/>
    <dependency org="org.seleniumhq.selenium.client-drivers" name="selenium-java-client-driver"    rev="1.0.2" conf="selenium->master"/>
    <dependency org="org.seleniumhq.selenium.server" name="selenium-server-coreless" rev="1.0.3"               conf="selenium->compile,master">
        <artifact name="selenium-server-coreless" type="jar"/>
    </dependency>
    <dependency org="org.seleniumhq.selenium.server" name="selenium-server" rev="1.0.3"               conf="selenium->master">
        <artifact name="selenium-server" m:classifier="standalone"/>
    </dependency>
  </dependencies>
</ivy-module>
