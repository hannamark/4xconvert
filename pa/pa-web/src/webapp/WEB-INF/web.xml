<?xml version="1.0" encoding="UTF-8"?>

<web-app id="PA" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>PA</display-name>

    <!-- Abstraction session-timeout -->
    <session-config>
        <session-timeout>240</session-timeout>
    </session-config>

    <!-- Define the basename for a resource bundle for I18N -->
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
        <param-value>ApplicationResources</param-value>
    </context-param>
    <context-param>
        <param-name>showErrorStackTraces</param-name>
        <param-value>@showErrorStackTraces@</param-value>
    </context-param>
    <context-param>
        <param-name>appTagVersion</param-name>
        <param-value>@project.version@</param-value>
    </context-param>
    <context-param>
        <param-name>appTagRevision</param-name>
        <param-value>@project.revision@</param-value>
    </context-param>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath*:applicationContext*.xml</param-value>
    </context-param>

    <!-- Filters -->
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>gov.nih.nci.pa.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>usernameFilter</filter-name>
        <filter-class>com.fiveamsolutions.nci.commons.web.filter.UsernameFilter</filter-class>
        <init-param>
            <param-name>caseSensitive</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>action2-cleanup</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ActionContextCleanUp</filter-class>
    </filter>
    <filter>
        <filter-name>sitemesh</filter-name>
        <filter-class>com.opensymphony.module.sitemesh.filter.PageFilter</filter-class>
    </filter>
    <filter>
        <filter-name>action2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter>
        <filter-name>openSessionFilter</filter-name>
        <filter-class>gov.nih.nci.pa.filter.PaOpenSessionInViewFilter</filter-class>
    </filter>
    <filter>
        <filter-name>sessionFixation</filter-name>
        <filter-class>com.fiveamsolutions.nci.commons.web.filter.SessionFixationProtectionFilter</filter-class>
    </filter>
    <filter>
        <filter-name>cgmmAuthSrcMapHelper</filter-name>
        <filter-class>gov.nih.nci.pa.filter.CGMMAuthSourceRequestFilter</filter-class>
    </filter>

    <filter>
        <filter-name>csmUserFilter</filter-name>
        <filter-class>gov.nih.nci.pa.filter.CsmUserFilter</filter-class>
    </filter>
    <filter>
        <filter-name>ResponseOverrideFilter</filter-name>
        <filter-class>org.displaytag.filter.ResponseOverrideFilter</filter-class>
    </filter>
    
     <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>sessionFixation</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>usernameFilter</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>cgmmAuthSrcMapHelper</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>openSessionFilter</filter-name>
        <url-pattern>*.action</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>action2-cleanup</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
     <!-- This filter has to be before the sitemesh filter or sitemesh will try to decorate the file exported from displaytag -->
    <filter-mapping>
        <filter-name>ResponseOverrideFilter</filter-name>
        <url-pattern>*.action</url-pattern>
    </filter-mapping>   
    <filter-mapping>
        <filter-name>sitemesh</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>action2</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>csmUserFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
   
    <!-- Listeners -->
    <listener>
        <listener-class>gov.nih.nci.coppa.web.SyncGTSListener</listener-class>
    </listener>    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>gov.nih.nci.pa.filter.CSMSyncListener</listener-class>
    </listener>
    <listener>
        <description>Sets the various paths variables in the servlet context for use in jsps</description>
        <listener-class>gov.nih.nci.pa.util.ServletContextConfigurator</listener-class>
    </listener>

    <!-- Welcome file lists -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>default.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>500</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/error.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/403.jsp</location>
    </error-page>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>bare</web-resource-name>
            <url-pattern>/bare/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>                      
        </web-resource-collection>
        <auth-constraint>
            <role-name>Abstractor</role-name>
            <role-name>AdminAbstractor</role-name>
            <role-name>ScientificAbstractor</role-name>
            <role-name>SuAbstractor</role-name>
            <role-name>ReportViewer</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>bare</web-resource-name>
            <url-pattern>/bare/*</url-pattern>
            <http-method>DELETE</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>  
        </web-resource-collection>
        <auth-constraint />
    </security-constraint>
    
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>protected</web-resource-name>
            <url-pattern>/protected/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>                      
        </web-resource-collection>
        <auth-constraint>
            <role-name>Abstractor</role-name>
            <role-name>AdminAbstractor</role-name>
            <role-name>ScientificAbstractor</role-name>
            <role-name>SuAbstractor</role-name>
            <role-name>ReportViewer</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>protected</web-resource-name>
            <url-pattern>/protected/*</url-pattern>
            <http-method>DELETE</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>  
        </web-resource-collection>
        <auth-constraint />
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>report</web-resource-name>
            <url-pattern>/report/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>GET</http-method>
            <http-method>PUT</http-method>
            <http-method>HEAD</http-method>                     
        </web-resource-collection>
        <auth-constraint>
            <role-name>Abstractor</role-name>
            <role-name>AdminAbstractor</role-name>
            <role-name>ScientificAbstractor</role-name>
            <role-name>ReportViewer</role-name>
            <role-name>SuAbstractor</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>report</web-resource-name>
            <url-pattern>/report/*</url-pattern>
            <http-method>DELETE</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>  
        </web-resource-collection>
        <auth-constraint />
    </security-constraint>

    <security-role>
        <description>Abstracts trials registered in CTRP.</description>
        <role-name>Abstractor</role-name>
    </security-role>
    <security-role>
        <description>Non-abstractors who can view reports.</description>
        <role-name>ReportViewer</role-name>
    </security-role>
    <security-role>
        <description>Super abstractors who can break check-outs of trials.</description>
        <role-name>SuAbstractor</role-name>
    </security-role>
    <security-role>
        <description>Scientific Abstractor for trials registered in CTRP.</description>
        <role-name>ScientificAbstractor</role-name>
    </security-role>
    <security-role>
        <description>Administrative Abstractor for trials registered in CTRP.</description>
        <role-name>AdminAbstractor</role-name>
    </security-role>

    <login-config>
        <auth-method>CAGRIDFORM</auth-method>
        <form-login-config>
            <form-login-page>/login.action</form-login-page>
            <form-error-page>/login.action?failedLogin=true</form-error-page>
        </form-login-config>
    </login-config>

    <servlet>
        <servlet-name>QuartzServlet</servlet-name>
        <servlet-class>org.quartz.ee.servlet.QuartzInitializerServlet</servlet-class>
        <init-param>
            <param-name>config-file</param-name>
            <param-value>/quartz.properties</param-value>
        </init-param>
        <init-param>
            <param-name>shutdown-on-unload</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>start-scheduler-on-load</param-name>
            <param-value>true</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
</web-app>
