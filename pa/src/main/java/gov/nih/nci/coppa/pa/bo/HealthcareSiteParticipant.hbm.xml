<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="gov.nih.nci.ctom.domain">
  <class name="HealthcareSiteParticipant" table="HEALTHCARE_SITE_PRTCPNT" lazy="true" polymorphism="explicit">
    <cache usage="read-write" />
    <id name="id" type="java.lang.Long" column="ID">
      <generator class="assigned" />
    </id>
    <property name="participantIdentifier" type="java.lang.String" column="PARTICIPANT_IDENTIFIER" />
    <many-to-one name="participant" class="gov.nih.nci.ctom.domain.Participant" column="PARTICIPANT_ID" lazy="proxy" />
    <set name="healthcareSiteRoleCollection" lazy="true" inverse="true">
      <cache usage="read-write" />
      <key column="HEALTHCARE_SITE_PRTCPNT_ID" />
      <one-to-many class="gov.nih.nci.ctom.domain.HealthcareSiteParticipantRole" />
    </set>
    <filter name="security_key_filter" condition="SECURITY_KEY IN (:keys_array)"/>
  </class>
</hibernate-mapping>

