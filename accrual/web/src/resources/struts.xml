<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC 
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
 <constant name="struts.devMode" value="true" />
    <package name="default" extends="struts-default">
        <interceptors>
            <interceptor name="nci-commonsParams" class="com.fiveamsolutions.nci.commons.web.struts2.interceptor.DisplayTagParametersInterceptor" />
            <interceptor name="parameterTrim" class="com.fiveamsolutions.nci.commons.web.struts2.interceptor.ParameterTrimInterceptor" />
            <interceptor-stack name="methodValidationStack">
                <interceptor-ref name="exception" />
                <interceptor-ref name="alias" />
                <interceptor-ref name="params"/>
                <interceptor-ref name="servletConfig" />
                <interceptor-ref name="prepare"/>
                <interceptor-ref name="i18n" />
                <interceptor-ref name="chain" />
                <interceptor-ref name="fileUpload"/>
                <interceptor-ref name="params"/>
                <interceptor-ref name="conversionError" />
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="workflow">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="parameterTrim">
                    <param name="trimToNull">true</param>
                    <param name="trimFromFront">true</param>
                </interceptor-ref>
              </interceptor-stack>
        </interceptors>

        <global-results>
            <result name="error">error.jsp</result>
            <result name="logout" type="redirectAction">
                <param name="namespace">/</param>
                <param name="actionName">logout</param>
            </result>
        </global-results> 
        <action name="login">
           <result>/WEB-INF/jsp/login.jsp</result>
        </action>
        <action name="logout" class="gov.nih.nci.accrual.web.action.LogoutAction" method="logout">
            <result>/index.jsp</result>
        </action>
        <action name="home">
            <result>/WEB-INF/jsp/accrualHome.jsp</result>
        </action>
         <action name="contact">
           <result>/WEB-INF/jsp/accrualContact.jsp</result>
        </action> 
    </package>

    <package name="common" namespace="/common" extends="default">
        <action name="welcome" class="gov.nih.nci.accrual.web.action.WelcomeAction">
            <result name="protectedNamespace" type="redirectAction">
                <param name="namespace">../protected</param>
                <param name="actionName">disClaimerAction</param>
            </result>
            <result name="outcomesNamespace" type="redirectAction">
                <param name="namespace">../outcomes</param>
                <param name="actionName">disClaimerAction</param>
            </result>
        </action>
    </package>

    <package name="protected" namespace="/protected" extends="default">
        <action name="disClaimerAction*" class="gov.nih.nci.accrual.web.action.DisclaimerAction" method="{1}">
            <result>viewTrials.action</result>
            <result name="show_Disclaimer_Page">/WEB-INF/jsp/disclaimer.jsp</result>
        </action>

        <action name="viewTrials*" class="gov.nih.nci.accrual.web.action.ViewTrialsAction">
            <result>/WEB-INF/jsp/searchTrials.jsp</result>
        </action>

        <action name="accrualSubmissions*" class="gov.nih.nci.accrual.web.action.AccrualSubmissionsAction" method="{1}">
            <result>/WEB-INF/jsp/listAccrualSubmissions.jsp</result>
            <result name="showNewSubmission">/WEB-INF/jsp/newAccrualSubmission.jsp</result>
            <result name="viewSubmissionDetails">/WEB-INF/jsp/viewAccrualSubmissionDetails.jsp</result>
        </action>

        <action name="patients*" class="gov.nih.nci.accrual.web.action.PatientAction" method="{1}">
            <result>/WEB-INF/jsp/searchPatients.jsp</result>
            <result name="detail">/WEB-INF/jsp/searchPatientsDetail.jsp</result>
        </action>
        
        <action name="ajaxpatients*" class="gov.nih.nci.accrual.web.action.PatientAction" method="{1}">
            <result>/WEB-INF/jsp/nodecorate/{1}.jsp</result>
        </action>
        
        <action name="popup*" class="gov.nih.nci.accrual.web.action.PopUpAction" method="{1}">
            <result>/WEB-INF/jsp/nodecorate/lookupdiseases{1}.jsp</result>
        </action>
        
    </package>

    <package name="outcomes" namespace="/outcomes" extends="default">
        <action name="disClaimerAction*" class="gov.nih.nci.accrual.web.action.DisclaimerAction" method="{1}">
            <result>viewTrials.action</result>
            <result name="show_Disclaimer_Page">/WEB-INF/jsp/disclaimer.jsp</result>
        </action>
        
        <action name="viewTrials*" class="gov.nih.nci.accrual.web.action.ViewTrialsAction">
            <result>/WEB-INF/jsp/searchTrials.jsp</result>
        </action>

        <action name="patients*" class="gov.nih.nci.accrual.web.action.PatientAction" method="{1}">
            <result>/WEB-INF/jsp/searchPatients.jsp</result>
            <result name="detail">/WEB-INF/jsp/searchPatientsDetail.jsp</result>
        </action>
        
        <action name="ajaxpatients*" class="gov.nih.nci.accrual.web.action.PatientAction" method="{1}">
            <result>/WEB-INF/jsp/nodecorate/{1}.jsp</result>
        </action>
        
        <action name="popup*" class="gov.nih.nci.accrual.web.action.PopUpAction" method="{1}">
            <result>/WEB-INF/jsp/nodecorate/lookupdiseases{1}.jsp</result>
        </action>
        
        <action name="diagnosis*" class="gov.nih.nci.accrual.web.action.DiagnosisAction" method="{1}">
            <result>/WEB-INF/jsp/diagnosis.jsp</result>
        </action>
        
        <action name="staging*" class="gov.nih.nci.accrual.web.action.StagingAction" method="{1}">
            <result>/WEB-INF/jsp/staging.jsp</result>
        </action>
        
        <action name="pathology*" class="gov.nih.nci.accrual.web.action.PathologyAction" method="{1}">
            <result>/WEB-INF/jsp/pathology.jsp</result>
        </action>
        
        <action name="priorTherapies*" class="gov.nih.nci.accrual.web.action.PriorTherapiesAction" method="{1}">
            <result>/WEB-INF/jsp/priorTherapies.jsp</result>
        </action>
        
        <action name="treatment*" class="gov.nih.nci.accrual.web.action.TreatmentAction" method="{1}">
            <result>/WEB-INF/jsp/treatment.jsp</result>
        </action>
        
        <action name="drugBiologics*" class="gov.nih.nci.accrual.web.action.DrugBiologicsAction" method="{1}">
            <result>/WEB-INF/jsp/drugBiologics.jsp</result>
        </action>
        
        <action name="procedure*" class="gov.nih.nci.accrual.web.action.ProcedureAction" method="{1}">
            <result>/WEB-INF/jsp/procedure.jsp</result>
        </action>
        
        <action name="radiation*" class="gov.nih.nci.accrual.web.action.RadiationAction" method="{1}">
            <result>/WEB-INF/jsp/radiation.jsp</result>
        </action>
        
        <action name="offTreatment*" class="gov.nih.nci.accrual.web.action.OffTreatmentAction" method="{1}">
            <result>/WEB-INF/jsp/offTreatment.jsp</result>
        </action>
        
        <action name="patientOutcomes*" class="gov.nih.nci.accrual.web.action.PatientOutcomesAction" method="{1}">
            <result>/WEB-INF/jsp/patientOutcomes.jsp</result>
        </action>
        
        <action name="deathInformation*" class="gov.nih.nci.accrual.web.action.DeathInfoAction" method="{1}">
            <result>/WEB-INF/jsp/deathInformation.jsp</result>
        </action>
        
    </package>
</struts>